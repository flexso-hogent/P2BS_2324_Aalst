<mvc:View
    controllerName="flexso.controller.SessionScores"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    displayBlock="true"
>
    <Page
        id="sessionScoresPage"
        title="Flexso"
        class="sessionScoresPage"
    >
        <headerContent>
            <core:Fragment
                fragmentName="flexso.fragment.Toolbar"
                type="XML"
            />
        </headerContent>
        <l:VerticalLayout
            id="_LayoutFeedback"
            width="100%"
            class="feedbackLayout"
        >
            <l:content>
                <VBox
                    id="_IDGenVBox1"
                    class="sessionScoresBox"
                    width="1200px"
                >
                    <Title
                        id="_IDGenTitle1"
                        text="{i18n>sessionScoresTitle}"
                        level="H2"
                        class="TitleCreateSession"
                    />
                    <Image
                        id="imageFlexso"
                        src="{imageModel>/path}"
                        class="registerImage"
                    />
                    <!--Sessie zoeken-->
                    <Label
                        id="sessieZoekenLabel"
                        text="{i18n>sessionScoresLabel}"
                        class="sessionScoresLabel"
                    />

                    <!--Sessie input-->
                    <OverflowToolbar
                        id="_IDGenOverflowToolbar1"
                        width="100%"
                        class="sapUiRespOverflowToolbar"
                    >
                        <SearchField
                            id="eventZoekenInput"
                            liveChange="onSearch"
                            width="100%"
                        />
                    </OverflowToolbar>

                    <Table
                        id="eventTable"
                        items="{/Events}"
                        noDataText="{i18n>noData}"
                        width="100%"
                    >
                        <columns>
                            <Column id="_IDGenColumn1">
                                <Text
                                    id="_IDGenText1"
                                    text="{i18n>Event}"
                                />
                            </Column>
                            <Column id="_IDGenColumn2">
                                <Text
                                    id="_IDGenText2"
                                    text="{i18n>Location}"
                                />
                            </Column>
                            <Column id="_IDGenColumn3">
                                <Text
                                    id="_IDGenText3"
                                    text="{i18n>StartDate}"
                                />
                            </Column>
                            <Column id="_IDGenColumn4">
                                <Text
                                    id="_IDGenText4"
                                    text="{i18n>EndDate}"
                                />
                            </Column>
                            <Column id="_IDGenColumn5">
                                <Text
                                    id="_IDGenText5"
                                    text="{i18n>Description}"
                                />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem
                                id="ItemsEvents"
                                vAlign="Middle"
                                type="Navigation"
                                press="onSessionSelect"
                            >
                                <cells>
                                    <Text
                                        id="_IDGenText7"
                                        text="{name}"
                                    />
                                    <Text
                                        id="_IDGenText8"
                                        text="{location}"
                                    />
                                    <Text
                                        id="_IDGenText9"
                                        text="{startDate}"
                                    />
                                    <Text
                                        id="_IDGenText10"
                                        text="{endDate}"
                                    />
                                    <Text
                                        id="_IDGenText11"
                                        text="{description}"
                                    />
                                </cells>
                            </ColumnListItem>
                        </items>
                        <layoutData>
                            <l:SplitterLayoutData
                                id="_IDGenSplitterLayoutData1"
                                size="100%"
                                resizable="false"
                            />
                        </layoutData>
                    </Table>
                    <List
                        id="sessionsList"
                        items="{ path: 'sessionModel>/' }"
                        noDataText="{i18n>noData}"
                        width="100%"
                        visible="false"
                    >
                        <!-- CustomListItem -->
                        <CustomListItem
                            id="sessionListItem"
                            press="onSessionSelect"
                            class="listItemsSessions"
                        >
                            <FlexBox
                                id="scoresflexbox"
                                alignItems="Start"
                                justifyContent="SpaceBetween"
                                class="sessionsboxen"
                            >
                                <VBox id="scoresvbox">
                                    <Label
                                        id="sessionID"
                                        text="{sessionModel>title}"
                                    />
                                    <Text
                                        id="sessionDates"
                                        text="{sessionModel>startDate} - {sessionModel>endDate}"
                                    />
                                    <Text
                                        id="SessionDescription"
                                        text="{sessionModel>description}"
                                    />
                                </VBox>

                                <VBox id="percentageVbox">
                                    <HBox
                                        id="percentagehbox"
                                        alignItems="Center"
                                        justifyContent="SpaceBetween"
                                    >
                                        <ProgressIndicator
                                            id="progressIndicator"
                                            percentValue="{= ${sessionModel>averageRating} > 0 ? ${sessionModel>averageRating} : null}"
                                            visible="{= ${sessionModel>averageRating} > 0 }"
                                            state="{= ${sessionModel>averageRating} >= 50 ? 'Success' : 'Error'}"
                                            width="15rem"
                                            height="1.5rem"
                                            showValue="false"
                                            class="ratingpercentage"
                                        />
                                        <VBox id="_IDGenVBox2">
                                            <Text
                                                id="rating"
                                                text="{= ${sessionModel>averageRating} > 0 ? ${sessionModel>averageRating} + '%' : ${i18n>noReviewsGivenLabel}}"
                                                class="{= ${sessionModel>averageRating} >= 50 ? 'GoodRating' : 'PoorRating'}"
                                            />
                                            <Text
                                                id="feedbackCountText"
                                                text="{= ${sessionModel>feedbackCount} === 1 ? ${sessionModel>feedbackCount} + ' ' + ${i18n>feedbackGivenLabel} : ${sessionModel>feedbackCount} + ' ' + ${i18n>feedbacksGivenLabel}}"
                                                class="feedbackCountText"
                                                visible="{= ${sessionModel>feedbackCount} > 0 }"
                                            />
                                            <Button
                                                id="_IDGenButton1"
                                                text="{= ${sessionModel>feedbackCount} === 1 ? ${i18n>buttonreview} :  ${i18n>buttonreviews}}"
                                                visible="{= ${sessionModel>averageRating} > 0 ? true : false }"
                                                class="sapUiSmallMarginEnd outlookButton1"
                                                width="10rem"
                                                press="onShowreviews"
                                            />
                                        </VBox>
                                    </HBox>
                                </VBox>
                            </FlexBox>
                        </CustomListItem>
                    </List>
                </VBox>
            </l:content>
        </l:VerticalLayout>
    </Page>
    <!-- Popover Definition -->
    <core:Fragment
        fragmentName="flexso.fragment.Popover"
        type="XML"
    />
</mvc:View>
