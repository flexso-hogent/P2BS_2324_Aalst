<mvc:View
    controllerName="flexso.controller.CreateEvent"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
>
    <Page
        id="_IDGenPage1"
        title="{i18n>createEventTitle}"
    >
        <headerContent>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button
                    id="languageButton"
                    icon="sap-icon://globe"
                    press="onDropdownPress"
                />
                <Button
                    id="_IDGenButton3"
                    icon="sap-icon://home"
                    press="onBackToHome"
                />
                <Button
                    id="_IDGenButton4"
                    icon="sap-icon://person-placeholder"
                    press="onProfileButtonClick"
                />
                <Button
                    id="_IDGenButton8"
                    icon="sap-icon://log"
                    press="onLogoutPress"
                />
            </Toolbar>
        </headerContent>
        <content>
            <VBox
                id="_IDGenVBox1"
                class="sapUiSmallMargin"
            >
                <Input
                    id="_IDGenInput1"
                    value="{path: '/name', type: 'sap.ui.model.type.String', constraints: {notEmpty: true}}"
                    placeholder="{i18n>eventName}"
                    required="true"
                />
                <DatePicker
                    id="_IDGenDatePicker1"
                    value="{path: '/startDate'}"
                    placeholder="{i18n>startDate}"
                    required="true"
                />
                <DatePicker
                    id="_IDGenDatePicker2"
                    value="{path: '/endDate'}"
                    placeholder="{i18n>endDate}"
                    required="true"
                />
                <Input
                    id="_IDGenInput2"
                    value="{path: '/location', type: 'sap.ui.model.type.String', constraints: {notEmpty: true}}"
                    placeholder="{i18n>location}"
                    required="true"
                />
                <TextArea
                    id="_IDGenTextArea1"
                    value="{path: '/description'}"
                    placeholder="{i18n>description}"
                    required="true"
                />

                <Button
                    id="_IDGenButton1"
                    text="{i18n>EventAanmakenButton}"
                    press="onRegisterPress"
                />
            </VBox>
        </content>
    </Page>
    <Popover
        id="popover"
        placement="Auto"
        showArrow="true"
        title="{i18n>Menu}"
        contentWidth="auto"
    >
        <content>
            <VBox id="_IDGenVBox3">
                <Button
                    id="_IDGenButton9"
                    text="{i18n>EN}"
                    press="onSwitchToEnglish"
                    width="100%"
                />
                <Button
                    id="_IDGenButton10"
                    text="{i18n>NL}"
                    press="onSwitchToDutch"
                    width="100%"
                />
            </VBox>
        </content>
    </Popover>
</mvc:View>
