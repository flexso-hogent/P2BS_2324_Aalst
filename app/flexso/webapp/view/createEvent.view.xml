<mvc:View controllerName="flexso.controller.CreateEvent" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout">
    <Page id="_IDGenPage1" title="{i18n>createEventTitle}">
        <headerContent>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
              
                <Button
                    id="_IDGenButton3"
                    text="{i18n>EN}"
                    press="onSwitchToEnglish"
                />
                <Button
                    id="_IDGenButton4"
                    text="{i18n>NL}"
                    press="onSwitchToDutch"
                />
                <Button
                    id="_IDGenBackHomeButton2"
                    text="{i18n>backToHomeButton}"
                    press="onBackToHome"
                />
                <Button
                    id="_IDGenProfileButton"
                    icon="sap-icon://person-placeholder"
                    press="onProfileButtonClick"
                />
            </Toolbar>
        </headerContent>
        <content>
            <VBox id="_IDGenVBox1" class="sapUiSmallMargin">
                <Input id="_IDGenInput1" value="{path: '/name', type: 'sap.ui.model.type.String', constraints: {notEmpty: true}}" placeholder="{i18n>eventName}" required="true" />
                <DatePicker id="_IDGenDatePicker1" value="{path: '/startDate'}" placeholder="{i18n>startDate}" required="true" />
                <DatePicker id="_IDGenDatePicker2" value="{path: '/endDate'}" placeholder="{i18n>endDate}" required="true" />
                <Input id="_IDGenInput2" value="{path: '/location', type: 'sap.ui.model.type.String', constraints: {notEmpty: true}}" placeholder="{i18n>location}" required="true" />
                <TextArea id="_IDGenTextArea1" value="{path: '/description'}" placeholder="{i18n>description}" required="true" />

                <Button id="_IDGenButton1" text="{i18n>register}" press="onRegisterPress" />
            </VBox>
        </content>
    </Page>
</mvc:View>
