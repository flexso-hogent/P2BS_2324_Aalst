<mvc:View
    controllerName="flexso.controller.CreateEvent"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
>
    <Page
        id="_IDGenPage1"
        title="{i18n>Flexso}"
    >
        <headerContent>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button
                    id="languageButton"
                    icon="sap-icon://globe"
                    press="onDropdownPress"
                />
                <Button
                    id="_IDGenButton3"
                    icon="sap-icon://home"
                    press="onBackToHome"
                />
                <Button
                    id="_IDGenButton4"
                    icon="sap-icon://person-placeholder"
                    press="onProfileButtonClick"
                />
                <Button
                    id="_IDGenButton8"
                    icon="sap-icon://log"
                    press="onLogoutPress"
                />
            </Toolbar>
        </headerContent>
        <VBox
            id="createSessionContent"
            class="createSessionBox"
            width="100%"
        >
            <l:VerticalLayout
                id="_IDGenVerticalLayout2"
                class="createSessionLayout"
                width="100%"
            >
                <Title
                    id="_IDGenTitle1"
                    text="{i18n>titleMakeSession}"
                    level="H2"
                    class="TitleCreateSession"
                />
                <Image
                    id="imageFlexso"
                    src="{imageModel>/path}"
                    class="registerImage"
                />
                <Label
                    id="_IDGenLabel1"
                    text="{i18n>eventName}"
                />
                <Input
                    id="_IDGenInput1"
                    value="{path: '/name', type: 'sap.ui.model.type.String'}"
                    required="true"
                    width="30%"
                    placeholder="{i18n>eventName}"
                />
                <Label
                    id="_IDGenLabel2"
                    text="{i18n>startDate}"
                />
                <DatePicker
                    id="_IDGenDatePicker1"
                    value="{path: '/startDate'}"
                    required="true"
                    width="30%"
                />
                <Label
                    id="_IDGenLabel3"
                    text="{i18n>endDate}"
                />
                <DatePicker
                    id="_IDGenDatePicker2"
                    value="{path: '/endDate'}"
                    required="true"
                    width="30%"
                />
                <Label
                    id="_IDGenLabel4"
                    text="{i18n>location}"
                />
                <Input
                    id="_IDGenInput2"
                    value="{path: '/location', type: 'sap.ui.model.type.String'}"
                    required="true"
                    width="30%"
                    placeholder="{i18n>location}"
                />
                <Label
                    id="_IDGenLabel5"
                    text="{i18n>description}"
                />
                <TextArea
                    id="_IDGenTextArea1"
                    value="{path: '/description'}"
                    required="true"
                    width="30%"
                    rows="5"
                    placeholder="{i18n>description}"
                />
                <Button
                    id="_IDGenButton1"
                    text="{i18n>EventAanmakenButton}"
                    press="onRegisterPress"
                    width="30%"
                />
                <Button
                    id="_IDGenButton2"
                    text="{i18n>Back}"
                    press="onBackToHome"
                    width="30%"
                />
            </l:VerticalLayout>
        </VBox>
    </Page>
    <Popover
        id="popover"
        placement="Auto"
        showArrow="true"
        title="{i18n>Menu}"
        contentWidth="auto"
    >
        <content>
            <VBox id="_IDGenVBox3">
                <Button
                    id="_IDGenButton9"
                    text="{i18n>EN}"
                    press="onSwitchToEnglish"
                    width="100%"
                />
                <Button
                    id="_IDGenButton10"
                    text="{i18n>NL}"
                    press="onSwitchToDutch"
                    width="100%"
                />
            </VBox>
        </content>
    </Popover>
</mvc:View>
