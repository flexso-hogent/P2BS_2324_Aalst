<mvc:View
    controllerName="flexso.controller.Reviews"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    displayBlock="true"
>
    <Page
        id="_IDGenPage1"
        title="Reviews"
    >
        <headerContent>
            <core:Fragment
                fragmentName="flexso.fragment.Toolbar"
                type="XML"
            />
        </headerContent>
        <content>
            <Table
                id="reviewsTable"
                items="{reviews>/}"
            >
                <columns>
                    <Column id="emailColumn">
                        <Text
                            id="emailText"
                            text="Email"
                        />
                    </Column>
                    <Column id="ratingColumn">
                        <Text
                            id="ratingText"
                            text="Rating"
                        />
                    </Column>
                    <Column id="reviewColumn">
                        <Text
                            id="reviewText"
                            text="Review"
                        />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="reviewItem">
                        <cells>
                            <Text
                                id="emailCell"
                                text="{reviews>UserEmail}"
                            />
                            <Text
                                id="_IDGenText2"
                                text="{= '⭐'.repeat(${reviews>Rating}) }"
                            />
                            <Text
                                id="reviewCell"
                                text="{reviews>Review}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
    <core:Fragment
        fragmentName="flexso.fragment.Popover"
        type="XML"
    />
</mvc:View>
