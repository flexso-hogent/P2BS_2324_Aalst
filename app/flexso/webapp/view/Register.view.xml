<mvc:View
    controllerName="flexso.controller.Register"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
>
    <Page id="registerPage" title="Register" class="registerPage">
        <content> 
            <VBox id="_IDGenVBox1" class="registerBox"> 
                <l:VerticalLayout id="_IDGenVerticalLayout1" class="loginLayout"> 
                    <Image id="imageFlexso" src="{imageModel>/path}" width="100%" height="100%" class="loginImage" />

                    <!--Title-->
                    <Title id="_IDGenTitle1" text="Register" level="H2" class="registerTitle" />

                    <!-- Email Label-->
                    <Label id="emailLabel" text="Email" class="registerLabel" />

                    <!-- Email Input-->
                    <Input id="emailInput" type="Email" placeholder="Enter email" class="registerInput" />

                    <!--Company Label-->
                    <Label id="companyLabel" text="Company" class="registerLabel" />

                    <!--Company Input-->
                    <Input id="companyInput" type="Text" placeholder="Enter company" class="registerInput" />

                    <!--Role label-->
                    <Label id="roleLabel" text="Role" class="registerLabel" />

                    <!--Role Input-->
                    <Input id="roleInput" type="Text" placeholder="Enter role" class="registerInput" />

                    <!--Password Label-->
                    <Label id="passwordLabel" text="Password" class="registerLabel" />

                    <!--Password Input-->
                    <Input id="passwordInput" type="Password" placeholder="Enter password" class="registerInput" />

                    <!--Confirm Password label-->
                    <Label id="confirmPasswordLabel" text="Confirm Password" class="registerLabel" />

                    <!--Confirm Password Input-->
                    <Input id="confirmPasswordInput" type="Password" placeholder="Confirm password" class="registerInput" />

                    <!--Register Button-->
                    <Button id="registerButton" text="Register" width="100%" press="onRegister" class="registerButton" />
                </l:VerticalLayout>
            </VBox>
        </content>
    </Page>
</mvc:View>
