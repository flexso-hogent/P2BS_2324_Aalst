<mvc:View
    controllerName="flexso.controller.Register"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Page
        id="registerPage"
        title="Register"
        class="registerPage"
    >
        <headerContent>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button
                    id="languageButton"
                    icon="sap-icon://globe"
                    press="onDropdownPress"
                />
                <Button
                    id="backButton"
                    icon="sap-icon://nav-back"
                    press="onBackToHome"
                />
            </Toolbar>
        </headerContent>
        <content>
            <VBox
                id="_IDGenVBox1"
                class="registerBox"
            >
                <l:VerticalLayout
                    id="_IDGenVerticalLayout1"
                    class="loginLayout"
                >
                    <Image
                        id="imageFlexso"
                        src="{imageModel>/path}"
                        width="100%"
                        height="100%"
                        class="loginImage"
                    />

                    <!--Title-->
                    <Title
                        id="_IDGenTitle1"
                        text="{i18n>titleRegisterPage}"
                        level="H2"
                        class="registerTitle"
                    />

                    <!-- Email Label-->
                    <Label
                        id="emailLabel"
                        text="{i18n>emailLabel}"
                        class="registerLabel"
                    />

                    <!-- Email Input-->
                    <Input
                        id="emailInput"
                        type="Email"
                        placeholder="{i18n>emailPlaceholder}"
                        class="registerInput"
                        required="true"
                        value="test@gmail.com"
                    />
                    <Label
                        id="_IDGenLabel9"
                        text="{i18n>firstNameLabel}"
                        class="registerLabel"
                    />

                    <!-- firstname Input -->
                    <Input
                        id="firstnameInput"
                        type="Text"
                        placeholder="{i18n>firstNamePlaceholder}"
                        class="registerInput"
                        required="true"
                        value="TestNaam"
                    />

                    <Label
                        id="_IDGenLabel10"
                        text="{i18n>lastNameLabel}"
                        class="registerLabel"
                    />

                    <!-- lastname Input -->
                    <Input
                        id="lastnameInput"
                        type="Text"
                        placeholder="{i18n>lastNamePlaceholder}"
                        class="registerInput"
                        required="true"
                        value="TestAchternaam"
                    />

                    <!--Company Label-->
                    <Label
                        id="companyLabel"
                        text="{i18n>companylabel}"
                        class="registerLabel"
                    />

                    <!--Company Input-->
                    <Input
                        id="companyInput"
                        type="Text"
                        placeholder="{i18n>companyPlaceholder}"
                        class="registerInput"
                        required="true"
                        value="Flexso"
                    />

                    <!--Role label-->
                    <Label
                        id="roleLabel"
                        text="{i18n>rolelabel}"
                        class="registerLabel"
                    />

                    <!--Role Input-->
                    <Input
                        id="roleInput"
                        type="Text"
                        placeholder="{i18n>rolePlaceholder}"
                        class="registerInput"
                        required="true"
                        value="Admin"
                    />
                    <!-- Birthdate Label -->
                    <Label
                        id="_IDGenLabel1"
                        text="{i18n>birthdateLabel}"
                        class="registerLabel"
                    />

                    <!-- Birthdate Input -->
                    <DatePicker
                        id="bdateInput"
                        class="registerInput"
                        required="true"
                    />

                    <!-- Street Label -->
                    <Label
                        id="_IDGenLabel2"
                        text="{i18n>streetLabel}"
                        class="registerLabel"
                    />

                    <!-- Street Input -->
                    <Input
                        id="streetInput"
                        type="Text"
                        placeholder="{i18n>streetPlaceholder}"
                        class="registerInput"
                        required="true"
                        value="Hogentstraat"
                    />

                    <!-- House Number Label -->
                    <Label
                        id="_IDGenLabel3"
                        text="{i18n>hnumberLabel}"
                        class="registerLabel"
                    />

                    <!-- House Number Input -->
                    <Input
                        id="hnumberInput"
                        type="Number"
                        placeholder="{i18n>hnumberPlaceholder}"
                        class="registerInput"
                        required="true"
                        value="1"
                    />

                    <!-- City Label -->
                    <Label
                        id="_IDGenLabel4"
                        text="{i18n>cityLabel}"
                        class="registerLabel"
                    />

                    <!-- City Input -->
                    <Input
                        id="cityInput"
                        type="Text"
                        placeholder="{i18n>cityPlaceholder}"
                        class="registerInput"
                        required="true"
                        value="Gent"
                    />

                    <!-- Country Label -->
                    <Label
                        id="_IDGenLabel5"
                        text="{i18n>countryLabel}"
                        class="registerLabel"
                    />

                    <!-- Country Input -->
                    <Input
                        id="countryInput"
                        type="Text"
                        placeholder="{i18n>countryPlaceholder}"
                        class="registerInput"
                        required="true"
                        value="Belgium"
                    />

                    <!-- Zip Code Label -->
                    <Label
                        id="_IDGenLabel6"
                        text="{i18n>zipLabel}"
                        class="registerLabel"
                    />

                    <!-- Zip Code Input -->
                    <Input
                        id="zipInput"
                        type="Number"
                        placeholder="{i18n>zipPlaceholder}"
                        class="registerInput"
                        required="true"
                        value="9000"
                    />

                    <!-- Phone Label -->
                    <Label
                        id="_IDGenLabel7"
                        text="{i18n>phoneLabel}"
                        class="registerLabel"
                    />

                    <!-- Phone Input -->
                    <Input
                        id="phoneInput"
                        type="Number"
                        placeholder="{i18n>phonePlaceholder}"
                        class="registerInput"
                        required="true"
                        value="0477777777"
                    />

                    <!-- Gender Label -->
                    <Label
                        id="_IDGenLabel8"
                        text="{i18n>genderLabel}"
                        class="registerLabel"
                    />

                    <!-- Gender Input -->
                    <Select
                        id="genderInput"
                        class="registerInput"
                        required="true"
                    >
                        <core:Item
                            id="_IDGenItem1"
                            key="male"
                            text="{i18n>genderMale}"
                        />
                        <core:Item
                            id="_IDGenItem2"
                            key="female"
                            text="{i18n>genderFemale}"
                        />
                        <core:Item
                            id="_IDGenItem3"
                            key="other"
                            text="{i18n>genderOther}"
                        />
                    </Select>

                    <!--Password Label-->
                    <Label
                        id="passwordLabel"
                        text="{i18n>passwordLabel}"
                        class="registerLabel"
                    />

                    <!--Password Input-->
                    <Input
                        id="passwordInput"
                        type="Password"
                        placeholder="{i18n>passwordPlaceholder}"
                        class="registerInput"
                        required="true"
                        value="test123"
                    />

                    <!--Confirm Password label-->
                    <Label
                        id="confirmPasswordLabel"
                        text="{i18n>confirmPasswordlabel}"
                        class="registerLabel"
                    />

                    <!--Confirm Password Input-->
                    <Input
                        id="confirmPasswordInput"
                        type="Password"
                        placeholder="{i18n>confirmPasswordPlaceholder}"
                        class="registerInput"
                        required="true"
                        value="test123"
                    />

                    <!--Register Button-->
                    <Button
                        id="registerButton"
                        text="{i18n>registerButton}"
                        width="100%"
                        press="onRegister"
                        class="registerButton"
                    />
                </l:VerticalLayout>
            </VBox>
        </content>
    </Page>
    <Popover
        id="popover"
        placement="Auto"
        showArrow="true"
        title="{i18n>Menu}"
        contentWidth="auto"
    >
        <content>
            <VBox id="_IDGenVBox3">
                <Button
                    id="_IDGenButton9"
                    text="{i18n>EN}"
                    press="onSwitchToEnglish"
                    width="100%"
                />
                <Button
                    id="_IDGenButton10"
                    text="{i18n>NL}"
                    press="onSwitchToDutch"
                    width="100%"
                />
            </VBox>
        </content>
    </Popover>
</mvc:View>
