<mvc:View
    xmlns:imageeditor="sap.suite.ui.commons.imageeditor"
    controllerName="flexso.controller.Register"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Page
        id="registerPage"
        title="Register"
        class="registerPage"
    >
        <headerContent>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button
                    id="languageButton"
                    icon="sap-icon://globe"
                    press="onDropdownPress"
                />
                <Button
                    id="backButton"
                    icon="sap-icon://nav-back"
                    press="onBackToHome"
                />
            </Toolbar>
        </headerContent>
        <!--Title-->
        <Title
            id="_IDGenTitle1"
            text="{i18n>titleRegisterPage}"
            level="H2"
            class="registerTitle"
        />
        <Image
            id="imageFlexso"
            src="{imageModel>/path}"
            class="registerImage"
        />

        <content>
            <FlexBox
                id="_IDGenOuterFlexBox"
                class="outerFlexBox outerFlexBoxWithPadding"
                justifyContent="Center"
                alignItems="Center"
            >
                <FlexBox
                    id="_IDGenFlexBox1"
                    class="registerFlexBox"
                    direction="Row"
                >
                    <!-- Left Column -->
                    <FlexBox
                        id="_IDGenLeftFlexBox"
                        class="leftFlexBox"
                        direction="Column"
                    >
                        <!-- Email -->
                        <FlexBox
                            id="_IDGenFlexBox2"
                            class="formField"
                        >
                            <Label
                                id="emailLabel"
                                text="{i18n>emailLabel}"
                                class="registerLabel"
                            />
                            <Input
                                id="emailInput"
                                type="Email"
                                placeholder="{i18n>emailPlaceholder}"
                                class="registerInput"
                                required="true"
                                value="test@gmail.com"
                            />
                        </FlexBox>

                        <!-- Firstname -->
                        <FlexBox
                            id="_IDGenFlexBox3"
                            class="formField"
                        >
                            <Label
                                id="_IDGenLabel9"
                                text="{i18n>firstNameLabel}"
                                class="registerLabel"
                            />
                            <Input
                                id="firstnameInput"
                                type="Text"
                                placeholder="{i18n>firstNamePlaceholder}"
                                class="registerInput"
                                required="true"
                                value="TestNaam"
                            />
                        </FlexBox>

                        <!-- Lastname -->
                        <FlexBox
                            id="_IDGenFlexBox4"
                            class="formField"
                        >
                            <Label
                                id="_IDGenLabel10"
                                text="{i18n>lastNameLabel}"
                                class="registerLabel"
                            />
                            <Input
                                id="lastnameInput"
                                type="Text"
                                placeholder="{i18n>lastNamePlaceholder}"
                                class="registerInput"
                                required="true"
                                value="TestAchternaam"
                            />
                        </FlexBox>

                        <!-- Company -->
                        <FlexBox
                            id="_IDGenFlexBox5"
                            class="formField"
                        >
                            <Label
                                id="companyLabel"
                                text="{i18n>companylabel}"
                                class="registerLabel"
                            />
                            <Input
                                id="companyInput"
                                type="Text"
                                placeholder="{i18n>companyPlaceholder}"
                                class="registerInput"
                                required="true"
                                value="Flexso"
                            />
                        </FlexBox>

                        <!-- Role -->
                        <FlexBox
                            id="_IDGenFlexBox6"
                            class="formField"
                        >
                            <Label
                                id="roleLabel"
                                text="{i18n>rolelabel}"
                                class="registerLabel"
                            />
                            <Input
                                id="roleInput"
                                type="Text"
                                placeholder="{i18n>rolePlaceholder}"
                                class="registerInput"
                                required="true"
                                value="Admin"
                            />
                        </FlexBox>
                        <!-- Birthdate -->
                        <FlexBox
                            id="_IDGenFlexBox7"
                            class="formField"
                        >
                            <Label
                                id="_IDGenLabel1"
                                text="{i18n>birthdateLabel}"
                                class="registerLabel"
                            />
                            <DatePicker
                                id="bdateInput"
                                class="registerInput"
                                required="true"
                            />
                        </FlexBox>

                        <!-- Password -->
                        <FlexBox
                            id="_IDGenFlexBox15"
                            class="formField"
                        >
                            <Label
                                id="passwordLabel"
                                text="{i18n>passwordLabel}"
                                class="registerLabel"
                            />
                            <Input
                                id="passwordInput"
                                type="Password"
                                placeholder="{i18n>passwordPlaceholder}"
                                class="registerInput"
                                required="true"
                                value="test123"
                            />
                        </FlexBox>
                    </FlexBox>

                    <!-- Right Column -->
                    <FlexBox
                        id="_IDGenRightFlexBox"
                        class="rightFlexBox"
                        direction="Column"
                    >
                        <l:VerticalLayout
                            id="_IDGenVerticalLayout2"
                            class="loginLayout"
                        >
                            <!-- Street -->
                            <FlexBox
                                id="_IDGenFlexBox8"
                                class="formField"
                            >
                                <Label
                                    id="_IDGenLabel2"
                                    text="{i18n>streetLabel}"
                                    class="registerLabel"
                                />
                                <Input
                                    id="streetInput"
                                    type="Text"
                                    placeholder="{i18n>streetPlaceholder}"
                                    class="registerInput"
                                    required="true"
                                    value="Hogentstraat"
                                />
                            </FlexBox>
                            <!-- House Number -->
                            <FlexBox
                                id="_IDGenFlexBox9"
                                class="formField"
                            >
                                <Label
                                    id="_IDGenLabel3"
                                    text="{i18n>hnumberLabel}"
                                    class="registerLabel"
                                />
                                <Input
                                    id="hnumberInput"
                                    type="Number"
                                    placeholder="{i18n>hnumberPlaceholder}"
                                    class="registerInput"
                                    required="true"
                                    value="1"
                                />
                            </FlexBox>

                            <!-- City -->
                            <FlexBox
                                id="_IDGenFlexBox10"
                                class="formField"
                            >
                                <Label
                                    id="_IDGenLabel4"
                                    text="{i18n>cityLabel}"
                                    class="registerLabel"
                                />
                                <Input
                                    id="cityInput"
                                    type="Text"
                                    placeholder="{i18n>cityPlaceholder}"
                                    class="registerInput"
                                    required="true"
                                    value="Gent"
                                />
                            </FlexBox>

                            <!-- Country -->
                            <FlexBox
                                id="_IDGenFlexBox11"
                                class="formField"
                            >
                                <Label
                                    id="_IDGenLabel5"
                                    text="{i18n>countryLabel}"
                                    class="registerLabel"
                                />
                                <Input
                                    id="countryInput"
                                    type="Text"
                                    placeholder="{i18n>countryPlaceholder}"
                                    class="registerInput"
                                    required="true"
                                    value="Belgium"
                                />
                            </FlexBox>

                            <!-- Zip Code -->
                            <FlexBox
                                id="_IDGenFlexBox12"
                                class="formField"
                            >
                                <Label
                                    id="_IDGenLabel6"
                                    text="{i18n>zipLabel}"
                                    class="registerLabel"
                                />
                                <Input
                                    id="zipInput"
                                    type="Number"
                                    placeholder="{i18n>zipPlaceholder}"
                                    class="registerInput"
                                    required="true"
                                    value="9000"
                                />
                            </FlexBox>

                            <!-- Phone -->
                            <FlexBox
                                id="_IDGenFlexBox13"
                                class="formField"
                            >
                                <Label
                                    id="_IDGenLabel7"
                                    text="{i18n>phoneLabel}"
                                    class="registerLabel"
                                />
                                <Input
                                    id="phoneInput"
                                    type="Number"
                                    placeholder="{i18n>phonePlaceholder}"
                                    class="registerInput"
                                    required="true"
                                    value="0477777777"
                                />
                            </FlexBox>

                            <!-- Gender -->
                            <FlexBox
                                id="_IDGenFlexBox14"
                                class="formField"
                            >
                                <Label
                                    id="_IDGenLabel8"
                                    text="{i18n>genderLabel}"
                                    class="registerLabel"
                                />
                                <Select
                                    id="genderInput"
                                    required="true"
                                >
                                    <core:Item
                                        id="_IDGenItem1"
                                        key="male"
                                        text="{i18n>genderMale}"
                                    />
                                    <core:Item
                                        id="_IDGenItem2"
                                        key="female"
                                        text="{i18n>genderFemale}"
                                    />
                                    <core:Item
                                        id="_IDGenItem3"
                                        key="other"
                                        text="{i18n>genderOther}"
                                    />
                                </Select>
                            </FlexBox>

                            <!-- Confirm Password -->
                            <FlexBox
                                id="_IDGenFlexBox16"
                                class="formField"
                            >
                                <Label
                                    id="confirmPasswordLabel"
                                    text="{i18n>confirmPasswordlabel}"
                                    class="registerLabel"
                                />
                                <Input
                                    id="confirmPasswordInput"
                                    type="Password"
                                    placeholder="{i18n>confirmPasswordPlaceholder}"
                                    class="registerInput"
                                    required="true"
                                    value="test123"
                                />
                            </FlexBox>
                        </l:VerticalLayout>
                    </FlexBox>
                </FlexBox>
            </FlexBox>
            <Button
                id="registerButton"
                text="{i18n>registerButton}"
                press="onRegister"
                class="registerButton"
                type="Accept"
            />
        </content>
    </Page>
    <Popover
        id="popover"
        placement="Auto"
        showArrow="true"
        title="{i18n>Menu}"
        contentWidth="auto"
    >
        <content>
            <VBox id="_IDGenVBox3">
                <Button
                    id="_IDGenButton9"
                    text="{i18n>EN}"
                    press="onSwitchToEnglish"
                    width="100%"
                />
                <Button
                    id="_IDGenButton10"
                    text="{i18n>NL}"
                    press="onSwitchToDutch"
                    width="100%"
                />
            </VBox>
        </content>
    </Popover>
</mvc:View>
