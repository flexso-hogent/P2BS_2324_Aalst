<mvc:View
    controllerName="flexso.controller.Register"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
>
    <Page
        id="registerPage"
        title="Register"
        class="registerPage"
    >
        <headerContent>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button
                    id="_IDGenButton3"
                    text="{i18n>EN}"
                    press="onSwitchToEnglish"
                />
                <Button
                    id="_IDGenButton4"
                    text="{i18n>NL}"
                    press="onSwitchToDutch"
                />
                <Button
                    id="_IDGenBackHomeButton"
                    text="{i18n>back}"
                    press="onBackToHome"
                />
            </Toolbar>
        </headerContent>
        <content>
            <VBox
                id="_IDGenVBox1"
                class="registerBox"
            >
                <l:VerticalLayout
                    id="_IDGenVerticalLayout1"
                    class="loginLayout"
                >
                    <Image
                        id="imageFlexso"
                        src="{imageModel>/path}"
                        width="100%"
                        height="100%"
                        class="loginImage"
                    />

                    <!--Title-->
                    <Title
                        id="_IDGenTitle1"
                        text="{i18n>titleRegisterPage}"
                        level="H2"
                        class="registerTitle"
                    />

                    <!-- Email Label-->
                    <Label
                        id="emailLabel"
                        text="{i18n>emailLabel}"
                        class="registerLabel"
                    />

                    <!-- Email Input-->
                    <Input
                        id="emailInput"
                        type="Email"
                        placeholder="{i18n>emailPlaceholder}"
                        class="registerInput"
                        required="true"
                    />

                    <!--Company Label-->
                    <Label
                        id="companyLabel"
                        text="{i18n>companylabel}"
                        class="registerLabel"
                    />

                    <!--Company Input-->
                    <Input
                        id="companyInput"
                        type="Text"
                        placeholder="{i18n>companyPlaceholder}"
                        class="registerInput"
                        required="true"
                    />

                    <!--Role label-->
                    <Label
                        id="roleLabel"
                        text="{i18n>rolelabel}"
                        class="registerLabel"
                    />

                    <!--Role Input-->
                    <Input
                        id="roleInput"
                        type="Text"
                        placeholder="{i18n>rolePlaceholder}"
                        class="registerInput"
                        required="true"
                    />

                    <!--Password Label-->
                    <Label
                        id="passwordLabel"
                        text="{i18n>passwordLabel}"
                        class="registerLabel"
                    />

                    <!--Password Input-->
                    <Input
                        id="passwordInput"
                        type="Password"
                        placeholder="{i18n>passwordPlaceholder}"
                        class="registerInput"
                        required="true"
                    />

                    <!--Confirm Password label-->
                    <Label
                        id="confirmPasswordLabel"
                        text="{i18n>confirmPasswordlabel}"
                        class="registerLabel"
                    />

                    <!--Confirm Password Input-->
                    <Input
                        id="confirmPasswordInput"
                        type="Password"
                        placeholder="{i18n>confirmPasswordPlaceholder}"
                        class="registerInput"
                        required="true"
                    />

                    <!--Register Button-->
                    <Button
                        id="registerButton"
                        text="{i18n>registerButton}"
                        width="100%"
                        press="onRegister"
                        class="registerButton"
                    />
                </l:VerticalLayout>
            </VBox>
        </content>
    </Page>
</mvc:View>
