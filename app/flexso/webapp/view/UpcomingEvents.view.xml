<mvc:View
    controllerName="flexso.controller.UpcomingEvents"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
>
    <Page
        id="upcomingEventsPage"
        title="Flexso"
        enableScrolling="true"
        class="backgroundEventCreate"
    >
        <headerContent>
            <core:Fragment
                fragmentName="flexso.fragment.Toolbar"
                type="XML"
            />
        </headerContent>
        <HBox
            id="_IDGenHBox1"
            class="barAll"
        >
            <SearchField
                id="_IDGenSearchField"
                placeholder="{i18n>Search}"
                liveChange="onSearch"
                width="100%"
            />
            <Button
                id="_IDGenButton1"
                icon="sap-icon://sort"
                press="onSortPress"
            />
        </HBox>
        <HBox
            id="upcomingEventsHBox"
            class="barAll"
        >
            <!-- Upcoming Events Table -->
            <Table
                id="upcomingEventsTable"
                items="{
          path: 'upcomingSessionsModel>/'
        }"
                class="all-sessions-table"
                selectionChange="onDelete"
            >
                <columns>
                    <Column id="upcomingColumn1">
                        <Text
                            id="upcomingText1"
                            text="{i18n>Title}"
                        />
                    </Column>
                    <Column id="upcomingColumn2">
                        <Text
                            id="upcomingText2"
                            text="{i18n>StartDate}"
                        />
                    </Column>
                    <Column id="upcomingColumn3">
                        <Text
                            id="upcomingText3"
                            text="{i18n>EndDate}"
                        />
                    </Column>
                    <Column id="upcomingColumn4">
                        <Text
                            id="upcomingText4"
                            text="{i18n>StartTime}"
                        />
                    </Column>
                    <Column id="upcomingColumn5">
                        <Text
                            id="upcomingText5"
                            text="{i18n>EndTime}"
                        />
                    </Column>
                    <Column id="upcomingColumn6">
                        <Text
                            id="upcomingText6"
                            text="{i18n>Room}"
                        />
                    </Column>
                    <Column id="upcomingColumn7">
                        <Text
                            id="upcomingText7"
                            text="{i18n>Speaker}"
                        />
                    </Column>
                    <Column id="upcomingColumn8">
                        <Text
                            id="upcomingText8"
                            text="{i18n>TotalSeats}"
                        />
                    </Column>
                    <Column id="upcomingColumn9">
                        <Text
                            id="upcomingText9"
                            text="{i18n>Description}"
                        />
                    </Column>

                    <Column id="upcomingColumn11">
                        <Text
                            id="upcomingText11"
                            text="{i18n>SchrijfUit}"
                        />
                    </Column>
                    <Column id="upcomingColumn12">
                        <Text
                            id="upcomingText12"
                            text="{i18n>exportToOutlookButton}"
                        />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="upcomingColumnListItem">
                        <cells>
                            <Text
                                id="upcomingText13"
                                text="{upcomingSessionsModel>title}"
                            />
                            <Text
                                id="upcomingText14"
                                text="{upcomingSessionsModel>startDate}"
                            />
                            <Text
                                id="upcomingText15"
                                text="{upcomingSessionsModel>endDate}"
                            />
                            <Text
                                id="upcomingText16"
                                text="{upcomingSessionsModel>startTime}"
                            />
                            <Text
                                id="upcomingText17"
                                text="{upcomingSessionsModel>endTime}"
                            />
                            <Text
                                id="upcomingText18"
                                text="{upcomingSessionsModel>room}"
                            />
                            <Text
                                id="upcomingText19"
                                text="{upcomingSessionsModel>speaker}"
                            />
                            <Text
                                id="upcomingText20"
                                text="{upcomingSessionsModel>totalSeats}"
                            />
                            <Text
                                id="upcomingText21"
                                text="{upcomingSessionsModel>description}"
                            />

                            <Button
                                id="upcomingButton2"
                                icon="sap-icon://decline"
                                press="onLeaveSession"
                                class="sapUiSmallMarginEnd outlookButton1"
                            />
                            <Button
                                id="upcomingButton"
                                icon="sap-icon://add-calendar"
                                press="onExportToOutlookPress"
                                class="sapUiSmallMarginEnd outlookButton1"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </HBox>
    </Page>
    <!-- Popover Definition -->
    <core:Fragment
        fragmentName="flexso.fragment.Popover"
        type="XML"
    />
</mvc:View>
