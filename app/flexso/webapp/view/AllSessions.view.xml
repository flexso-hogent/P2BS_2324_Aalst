<mvc:View
    controllerName="flexso.controller.AllSessions"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
>
    <Page
        id="_IDGenPage1"
        title="Flexso"
        enableScrolling="true"
        class="backgroundEventCreate"
    >
        <headerContent>
            <core:Fragment
                fragmentName="flexso.fragment.Toolbar"
                type="XML"
            />
        </headerContent>
        <HBox
            id="_IDGenHBox1"
            class="barAll"
        >
            <SearchField
                id="_IDGenSearchField"
                placeholder="{i18n>Search}"
                liveChange="onSearch"
                width="100%"
            />
            <Button
                id="_IDGenButton1"
                icon="sap-icon://sort"
                press="onSortPress"
            />
        </HBox>

        <!-- Responsive Table for mobile devices -->
        <Table
            id="_IDGenTable1"
            inset="false"
            items="{
                path: 'allSessionsModel>/',
                filters: [
                    {
                        path: 'endDate',
                        operator: 'GT',
                        value1: '{path: \'today\', formatter: \'flexso.controller.AllSessions.formatDate\'}'
                    }
                ]
            }"
            class="all-sessions-table"
            selectionChange="onDelete"
            mode="SingleSelect"
            noDataText="{i18n>noDataText}"
        >
            <!-- Responsive columns setup -->
            <columns>
                <Column
                    id="_IDGenColumn1"
                    minScreenWidth="Tablet"
                    demandPopin="true"
                    popinDisplay="Inline"
                    hAlign="Center"
                >
                    <Text
                        id="_IDGenText1"
                        text="{i18n>Title}"
                    />
                </Column>
                <Column
                    id="_IDGenColumn2"
                    minScreenWidth="Tablet"
                    demandPopin="true"
                    popinDisplay="Inline"
                >
                    <Text
                        id="_IDGenText2"
                        text="{i18n>StartDate}"
                    />
                </Column>
                <!-- More columns with similar responsive settings -->
                <Column
                    id="_IDGenColumn3"
                    minScreenWidth="Tablet"
                    demandPopin="true"
                    popinDisplay="Block"
                >
                    <Text
                        id="_IDGenText3"
                        text="{i18n>Description}"
                    />
                </Column>
                <Column
                    id="_IDGenColumn4"
                    hAlign="Center"
                >
                    <Text
                        id="_IDGenText4"
                        text="{i18n>Feedback}"
                    />
                </Column>
            </columns>
            <items>
                <ColumnListItem
                    id="_IDGenColumnListItem1"
                    type="Navigation"
                    press="onItemPress"
                >
                    <cells>
                        <Text
                            id="_IDGenText5"
                            text="{allSessionsModel>title}"
                        />
                        <Text
                            id="_IDGenText6"
                            text="{allSessionsModel>startDate}"
                        />
                        <!-- More text bindings for other details -->
                        <Text
                            id="_IDGenText7"
                            text="{allSessionsModel>description}"
                        />
                        <Button
                            id="_IDGenButton2"
                            icon="sap-icon://add-favorite"
                            press="goToFeedbackDirect"
                        />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
    <!-- Popover Definition -->
    <core:Fragment
        fragmentName="flexso.fragment.Popover"
        type="XML"
    />
</mvc:View>
