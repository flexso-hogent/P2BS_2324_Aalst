<mvc:View
    controllerName="flexso.controller.AllSessions"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
>
    <Page
        id="_IDGenPage1"
        title="Flexso"
        enableScrolling="true"
        class="backgroundEventCreate"
    >
        <headerContent>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button
                    id="languageButton"
                    icon="sap-icon://globe"
                    press="onDropdownPress"
                />
                <Button
                    id="_IDGenButton3"
                    icon="sap-icon://home"
                    press="onBackToHome"
                />
                <Button
                    id="_IDGenButton4"
                    icon="sap-icon://person-placeholder"
                    press="onProfileButtonClick"
                />
                <Button
                    id="_IDGenButton8"
                    icon="sap-icon://log"
                    press="onLogoutPress"
                />
            </Toolbar>
        </headerContent>

        <SearchField
            id="_IDGenSearchField"
            placeholder="{i18n>Search}"
            liveChange="onSearch"
            width="20%"
            class="searchField"
        />

        <!-- Table to display all registered sessions -->
        <Table
            id="_IDGenTable1"
            items="{allSessionsModel>/}"
            class="all-sessions-table"
        >
            <columns>
                <Column id="_IDGenColumn1">
                    <Text
                        id="_IDGenText1"
                        text="{i18n>Title}"
                    />
                </Column>
                <Column id="_IDGenColumn2">
                    <Text
                        id="_IDGenText2"
                        text="{i18n>StartDate}"
                    />
                </Column>
                <Column id="_IDGenColumn3">
                    <Text
                        id="_IDGenText3"
                        text="{i18n>EndDate}"
                    />
                </Column>
                <Column id="_IDGenColumn">
                    <Text
                        id="_IDGenText"
                        text="{i18n>StartTime}"
                    />
                </Column>
                <Column id="_IDGenColumn11">
                    <Text
                        id="_IDGenTex11"
                        text="{i18n>EndTime}"
                    />
                </Column>
                <Column id="_IDGenColumn4">
                    <Text
                        id="_IDGenText4"
                        text="{i18n>Room}"
                    />
                </Column>
                <Column id="_IDGenColumn5">
                    <Text
                        id="_IDGenText5"
                        text="{i18n>Speaker}"
                    />
                </Column>
                <Column id="_IDGenColumn6">
                    <Text
                        id="_IDGenText6"
                        text="{i18n>TotalSeats}"
                    />
                </Column>
                <Column id="_IDGenColumn7">
                    <Text
                        id="_IDGenText7"
                        text="{i18n>Description}"
                    />
                </Column>
                <Column id="_IDGenColumnFeedback">
                    <Text
                        id="_IDGenText16"
                        text="{i18n>Feedback}"
                    />
                </Column>
                <Column id="_IDGenColumnSchrijfUit">
                    <Text
                        id="_IDGenText17"
                        text="{i18n>SchrijfUit}"
                    />
                </Column>
                <Column id="_IDGenColumnExportToOutlook">
                    <Text
                        id="_IDGenText18"
                        text="{i18n>exportToOutlookButton}"
                    />
                </Column>
            </columns>
            <items>
                <ColumnListItem id="_IDGenColumnListItem1">
                    <cells>
                        <Text
                            id="_IDGenText8"
                            text="{allSessionsModel>title}"
                        />
                        <Text
                            id="_IDGenText9"
                            text="{allSessionsModel>startDate}"
                        />
                        <Text
                            id="_IDGenText10"
                            text="{allSessionsModel>endDate}"
                        />
                        <Text
                            id="_IDGenText111"
                            text="{allSessionsModel>startTime}"
                        />
                        <Text
                            id="_IDGenText1111"
                            text="{allSessionsModel>endTime}"
                        />
                        <Text
                            id="_IDGenText11"
                            text="{allSessionsModel>room}"
                        />

                        <Text
                            id="_IDGenText12"
                            text="{allSessionsModel>speaker}"
                        />
                        <Text
                            id="_IDGenText13"
                            text="{allSessionsModel>totalSeats}"
                        />
                        <Text
                            id="_IDGenText14"
                            text="{allSessionsModel>description}"
                        />
                        <Button
                            id="_IDGenButton11"
                            icon="sap-icon://add-favorite"
                            press="goToFeedbackDirect"
                            class="sapUiSmallMarginEnd outlookButton1"
                        />
                        <Button
                            id="_IDGenButton12"
                            icon="sap-icon://decline"
                            press="goToSchrijfUit"
                            class="sapUiSmallMarginEnd outlookButton1"
                        />
                        <Button
                            id="_IDGenButton13"
                            icon="sap-icon://add-calendar"
                            press="onExportToOutlookPress"
                            class="sapUiSmallMarginEnd outlookButton1"
                        />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
    <Popover
        id="popover"
        placement="Auto"
        showArrow="true"
        title="{i18n>Menu}"
        contentWidth="auto"
    >
        <content>
            <VBox id="_IDGenVBox3">
                <Button
                    id="_IDGenButton9"
                    text="{i18n>EN}"
                    press="onSwitchToEnglish"
                    width="100%"
                />
                <Button
                    id="_IDGenButton10"
                    text="{i18n>NL}"
                    press="onSwitchToDutch"
                    width="100%"
                />
            </VBox>
        </content>
    </Popover>
</mvc:View>
