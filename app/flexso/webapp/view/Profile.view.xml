<mvc:View
    controllerName="flexso.controller.Profile"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
>
    <Page
        id="profilePage"
        title="{i18n>profileTitle}"
        class="profilePage"
    >
        <headerContent>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button
                    id="languageButton"
                    icon="sap-icon://globe"
                    press="onDropdownPress"
                />
                <Button
                    id="_IDGenButton3"
                    icon="sap-icon://home"
                    press="onBackToHome"
                />
                <Button
                    id="_IDGenButton4"
                    icon="sap-icon://person-placeholder"
                    press="onProfileButtonClick"
                />
                <Button
                    id="_IDGenButton5"
                    icon="sap-icon://log"
                    press="onLogoutPress"
                />
            </Toolbar>
        </headerContent>

        <content>
            <VBox
                id="_IDGenVBox1"
                alignItems="Center"
                justifyContent="SpaceAround"
                width="100%"
            >
                <!-- Title -->
                <Title
                    id="_IDGenTitle1"
                    text="{i18n>titleProfilePage}"
                    level="H2"
                    class="profileTitle"
                />

                <HBox
                    id="_IDGenHBox1"
                    width="100%"
                >
                    <!-- Left side: User input -->
                    <VBox
                        id="_IDGenVBox2"
                        class="profileBox"
                        alignItems="Center"
                        width="50%"
                    >
                        <l:VerticalLayout
                            id="_IDGenVerticalLayout1"
                            class="profileLayout"
                        >
                            <Image
                                id="_IDGenImage1"
                                src="{imageModel>/path}"
                                width="100%"
                                height="100%"
                                class="profileImage"
                            />

                            <!-- Email Label -->
                            <Label
                                id="_IDGenLabel2"
                                text="{i18n>emailLabel}"
                                class="profileLabel"
                            />

                            <Input
                                id="emailInput"
                                placeholder="{i18n>emailPlaceholder}"
                                value="{= ${userInfo>/email} || ''}"
                                width="100%"
                                class="profileInput"
                                editable="false"
                            />

                            <!-- Company Label -->
                            <Label
                                id="_IDGenLabel3"
                                text="{i18n>companylabel}"
                                class="profileLabel"
                            />
                            <!-- Company Input -->
                            <Input
                                id="companyInput"
                                placeholder="{i18n>companyPlaceholder}"
                                value="{userInfo>/company}"
                                width="100%"
                                class="profileInput"
                            />

                            <!-- Role Label -->
                            <Label
                                id="_IDGenLabel4"
                                text="{i18n>rolelabel}"
                                class="roleLabel"
                            />
                            <!-- Role Input -->
                            <Input
                                id="roleInput"
                                placeholder="{i18n>rolePlaceholder}"
                                value="{userInfo>/role}"
                                width="100%"
                                class="roleInput"
                            />

                            <!-- Birthdate Label -->
                            <Label
                                id="_IDGenLabel9"
                                text="{i18n>birthdateLabel}"
                                class="profileLabel"
                            />

                            <!-- Birthdate Input -->

                            <DatePicker
                                id="bdateInput"
                                class="profileLabel"
                                editable="true"
                                value="{
        path: 'userInfo>/birthdate',
        type: 'sap.ui.model.type.Date',
        formatOptions: {
            style: 'medium',
            pattern: 'dd-MM-yyyy'
        },
        formatter: '.formatter.formatDate'
    }"
                                valueFormat="yyyy-MM-dd"
                                displayFormat="dd-MM-yyyy"
                            />

                            <!-- Street Label -->
                            <Label
                                id="_IDGenLabel10"
                                text="{i18n>streetLabel}"
                                class="profileLabel"
                            />

                            <!-- Street Input -->
                            <Input
                                id="streetInput"
                                placeholder="{i18n>streetPlaceholder}"
                                value="{userInfo>/street}"
                                width="100%"
                                class="profileInput"
                            />

                            <!-- House Number Label -->
                            <Label
                                id="_IDGenLabel11"
                                text="{i18n>hnumberLabel}"
                                class="profileLabel"
                            />

                            <!-- House Number Input -->
                            <Input
                                id="hnumberInput"
                                placeholder="{i18n>hnumberPlaceholder}"
                                value="{userInfo>/hnumber}"
                                width="100%"
                                class="profileInput"
                            />

                            <!-- City Label -->
                            <Label
                                id="_IDGenLabel12"
                                text="{i18n>cityLabel}"
                                class="profileLabel"
                            />

                            <!-- City Input -->
                            <Input
                                id="cityInput"
                                placeholder="{i18n>cityPlaceholder}"
                                value="{userInfo>/city}"
                                width="100%"
                                class="profileInput"
                            />

                            <!-- Country Label -->
                            <Label
                                id="_IDGenLabel13"
                                text="{i18n>countryLabel}"
                                class="profileLabel"
                            />

                            <!-- Country Input -->
                            <Input
                                id="countryInput"
                                placeholder="{i18n>countryPlaceholder}"
                                value="{userInfo>/country}"
                                width="100%"
                                class="profileInput"
                            />

                            <!-- Zip Code Label -->
                            <Label
                                id="_IDGenLabel14"
                                text="{i18n>zipLabel}"
                                class="profileLabel"
                            />

                            <!-- Zip Code Input -->
                            <Input
                                id="zipInput"
                                placeholder="{i18n>zipPlaceholder}"
                                value="{userInfo>/zip}"
                                width="100%"
                                class="profileInput"
                            />

                            <!-- Phone Label -->
                            <Label
                                id="_IDGenLabel15"
                                text="{i18n>phoneLabel}"
                                class="profileLabel"
                            />

                            <!-- Phone Input -->
                            <Input
                                id="phoneInput"
                                placeholder="{i18n>phonePlaceholder}"
                                value="{userInfo>/phone}"
                                width="100%"
                                class="profileInput"
                            />

                            <!-- Gender Label -->
                            <Label
                                id="_IDGenLabel16"
                                text="{i18n>genderLabel}"
                                class="profileLabel"
                            />

                            <!-- Gender Input -->
                            <Select
                                id="genderInput"
                                class="profileInput"
                                selectedKey="{userInfo>/gender}"
                            >
                                <core:Item
                                    id="_IDGenItem4"
                                    key="male"
                                    text="{i18n>genderMale}"
                                />
                                <core:Item
                                    id="_IDGenItem5"
                                    key="female"
                                    text="{i18n>genderFemale}"
                                />
                                <core:Item
                                    id="_IDGenItem6"
                                    key="other"
                                    text="{i18n>genderOther}"
                                />
                            </Select>

                            <!-- Update Profile Button -->
                            <Button
                                id="_IDGenButton1"
                                text="{i18n>updateProfileButton}"
                                press="onUpdateProfilePress"
                                width="100%"
                                class="updateProfileButton"
                            />
                            <Button
                                id="_IDGenButton2"
                                text="{i18n>loguit}"
                                press="onLogoutPress"
                                width="100%"
                            />
                        </l:VerticalLayout>
                    </VBox>

                    <!-- Right side: User information -->
                    <VBox
                        id="_IDGenVBox3"
                        class="profileBox"
                        alignItems="Start"
                        justifyContent="Center"
                        width="50%"
                    >
                        <Label
                            id="userInfoTitle"
                            text="{i18n>userInfoTitle}"
                            class="userInfoTitle"
                        />

                        <Text
                            id="emailText"
                            text="{i18n>emailLabel} {userInfo>/email}"
                            class="userInfoText"
                        />

                        <Text
                            id="firstNameText"
                            text="{i18n>firstname} {userInfo>/firstname}"
                            class="userInfoText"
                        />

                        <Text
                            id="lastNameText"
                            text="{i18n>lastname} {userInfo>/lastname}"
                            class="userInfoText"
                        />

                        <Text
                            id="companyText"
                            text="{i18n>companylabel}: {userInfo>/company}"
                            class="userInfoText"
                        />

                        <Text
                            id="roleText"
                            text="{i18n>rolelabel}: {userInfo>/role}"
                            class="userInfoText"
                        />

                        <!-- Street Text -->
                        <Text
                            id="streetText"
                            text="{i18n>streetLabel}: {userInfo>/street}"
                            class="userInfoText"
                        />

                        <!-- House Number Text -->
                        <Text
                            id="hnumberText"
                            text="{i18n>hnumberLabel}: {userInfo>/hnumber}"
                            class="userInfoText"
                        />

                        <!-- City Text -->
                        <Text
                            id="cityText"
                            text="{i18n>cityLabel}: {userInfo>/city}"
                            class="userInfoText"
                        />

                        <!-- Country Text -->
                        <Text
                            id="countryText"
                            text="{i18n>countryLabel}: {userInfo>/country}"
                            class="userInfoText"
                        />

                        <!-- Zip Code Text -->
                        <Text
                            id="zipText"
                            text="{i18n>zipLabel}: {userInfo>/zip}"
                            class="userInfoText"
                        />

                        <!-- Phone Text -->
                        <Text
                            id="phoneText"
                            text="{i18n>phoneLabel}: {userInfo>/phone}"
                            class="userInfoText"
                        />

                        <!-- Gender Text -->
                        <Text
                            id="genderText"
                            text="{i18n>genderLabel}: {= ${userInfo>/gender} === 'male' ? ${i18n>genderMale} : ${userInfo>/gender} === 'female' ? ${i18n>genderFemale} : ${i18n>genderOther}}"
                            class="userInfoText"
                        />
                        <!-- Birthdate Text -->
                        <Text
                            id="bdateText"
                            text="{i18n>birthdateLabel}: {userInfo>/bdate}"
                            class="userInfoText"
                        />
                    </VBox>
                </HBox>
            </VBox>
        </content>
    </Page>
    <Popover
        id="popover"
        placement="Auto"
        showArrow="true"
        title="{i18n>Menu}"
        contentWidth="auto"
    >
        <content>
            <VBox
                id="_IDGenVBox"
                width="100%"
            >
                <Button
                    id="_IDGenButton"
                    text="{i18n>EN}"
                    press="onSwitchToEnglish"
                    width="100%"
                />
                <Button
                    id="_IDGenButton10"
                    text="{i18n>NL}"
                    press="onSwitchToDutch"
                    width="100%"
                />
            </VBox>
        </content>
    </Popover>
</mvc:View>
