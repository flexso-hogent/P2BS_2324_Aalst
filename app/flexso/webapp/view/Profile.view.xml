<mvc:View
    controllerName="flexso.controller.Profile"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
>
    <Page
        id="profilePage"
        title="{i18n>profileTitle}"
        class="profilePage"
    >
        <headerContent>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button
                    id="_IDGenButton3"
                    text="{i18n>EN}"
                    press="onSwitchToEnglish"
                />
                <Button
                    id="_IDGenButton4"
                    text="{i18n>NL}"
                    press="onSwitchToDutch"
                />
                <Button
                    id="_IDGenBackHomeButton"
                    text="{i18n>backToHomeButton}"
                    press="onBackToHome"
                />
                <Button
                    id="_IDGenProfileButton"
                    icon="{imageModel>/profileImagePath}"
                    press="onProfileButtonClick"
                />
            </Toolbar>
        </headerContent>

        <content>
            <VBox
                id="_IDGenVBox1"
                alignItems="Center"
                justifyContent="SpaceAround"
                width="100%"
            >
                <!-- Title -->
                <Title
                    id="_IDGenTitle1"
                    text="{i18n>titleProfilePage}"
                    level="H2"
                    class="profileTitle"
                />

                <HBox
                    id="_IDGenHBox1"
                    width="100%"
                >
                    <!-- Left side: User input -->
                    <VBox
                        id="_IDGenVBox2"
                        class="profileBox"
                        alignItems="Center"
                        width="50%"
                    >
                        <l:VerticalLayout
                            id="_IDGenVerticalLayout1"
                            class="profileLayout"
                        >
                            <Image
                                id="_IDGenImage1"
                                src="{imageModel>/path}"
                                width="100%"
                                height="100%"
                                class="profileImage"
                            />

                            <!-- Name Label -->
                            <Label
                                id="_IDGenLabel1"
                                text="{i18n>nameLabel}"
                                class="profileLabel"
                            />
                            <!-- Name Input -->
                            <Input
                                id="nameInput"
                                placeholder="{i18n>namePlaceholder}"
                                width="100%"
                                class="profileInput"
                            />

                            <!-- Email Label -->
                            <Label
                                id="_IDGenLabel2"
                                text="{i18n>emailLabel}"
                                class="profileLabel"
                            />
                            <!-- Email Input -->
                            <Input
                                id="emailInput"
                                placeholder="{i18n>emailPlaceholder}"
                                width="100%"
                                class="profileInput"
                            />

                            <!-- Update Profile Button -->
                            <Button
                                id="_IDGenButton1"
                                text="{i18n>updateProfileButton}"
                                press="onUpdateProfilePress"
                                width="100%"
                                class="updateProfileButton"
                            />
                        </l:VerticalLayout>
                    </VBox>

                    <!-- Right side: User information -->
                    <VBox
                        id="_IDGenVBox3"
                        class="profileBox"
                        alignItems="Start"
                        justifyContent="Center"
                        width="50%"
                    >
                        <Label
                            id="_IDGenLabel3"
                            text="{i18n>userInfoTitle}"
                            class="userInfoTitle"
                        />
                        <Text
                            id="_IDGenText1"
                            text="{i18n>userInfoText1}"
                            class="userInfoText"
                        />
                        <Text
                            id="_IDGenText2"
                            text="{i18n>userInfoText2}"
                            class="userInfoText"
                        />
                        <Text
                            id="_IDGenText3"
                            text="{i18n>userInfoText3}"
                            class="userInfoText"
                        />
                        <!-- Add more user information as needed -->
                        <Button
                            id="feedbackButton"
                            text="{i18n>feedbackButton}"
                            press="onFeedbackPress"
                            width="100%"
                            class="feedbackButton"
                        />
                    </VBox>
                </HBox>
            </VBox>
        </content>
    </Page>
</mvc:View>
