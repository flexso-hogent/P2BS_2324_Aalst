<mvc:View
    controllerName="flexso.controller.Profile"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
>
    <Page
        id="profilePage"
        title="{i18n>profileTitle}"
        class="profilePage"
    >
        <headerContent>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button
                    id="_IDGenButton3"
                    text="{i18n>EN}"
                    press="onSwitchToEnglish"
                />
                <Button
                    id="_IDGenButton4"
                    text="{i18n>NL}"
                    press="onSwitchToDutch"
                />
                <Button
                    id="_IDGenBackHomeButton"
                    text="{i18n>backToHomeButton}"
                    press="onBackToHome"
                />
                <Button
                    id="_IDGenProfileButton"
                    icon="{imageModel>/profileImagePath}"
                    press="onProfileButtonClick"
                />
            </Toolbar>
        </headerContent>

        <content>
            <VBox
                id="_IDGenVBox1"
                alignItems="Center"
                justifyContent="SpaceAround"
                width="100%"
            >
                <!-- Title -->
                <Title
                    id="_IDGenTitle1"
                    text="{i18n>titleProfilePage}"
                    level="H2"
                    class="profileTitle"
                />

                <HBox
                    id="_IDGenHBox1"
                    width="100%"
                >
                    <!-- Left side: User input -->
                    <VBox
                        id="_IDGenVBox2"
                        class="profileBox"
                        alignItems="Center"
                        width="50%"
                    >
                        <l:VerticalLayout
                            id="_IDGenVerticalLayout1"
                            class="profileLayout"
                        >
                            <Image
                                id="_IDGenImage1"
                                src="{imageModel>/path}"
                                width="100%"
                                height="100%"
                                class="profileImage"
                            />

                            <!-- Email Label -->
                            <Label
                                id="_IDGenLabel2"
                                text="{i18n>emailLabel}"
                                class="profileLabel"
                            />

                            <Input
                                id="emailInput"
                                placeholder="{i18n>emailPlaceholder}"
                                value="{= ${userInfo>/email} || ''}"
                                width="100%"
                                class="profileInput"
                                editable="false"
                            />

                            <!-- Company Label -->
                            <Label
                                id="_IDGenLabel3"
                                text="{i18n>companylabel}"
                                class="profileLabel"
                            />
                            <!-- Company Input -->
                            <Input
                                id="companyInput"
                                placeholder="{i18n>companyPlaceholder}"
                                value="{userInfo>/company}"
                                width="100%"
                                class="profileInput"
                            />

                            <!-- Role Label -->
                            <Label
                                id="_IDGenLabel4"
                                text="{i18n>rolelabel}"
                                class="roleLabel"
                            />
                            <!-- Role Input -->
                            <Input
                                id="roleInput"
                                placeholder="{i18n>rolePlaceholder}"
                                value="{userInfo>/role}"
                                width="100%"
                                class="roleInput"
                            />

                            <!-- Update Profile Button -->
                            <Button
                                id="_IDGenButton1"
                                text="{i18n>updateProfileButton}"
                                press="onUpdateProfilePress"
                                width="100%"
                                class="updateProfileButton"
                            />
                            <Button
                                id="_IDGenButton2"
                                text="{i18n>loguit}"
                                press="onLogoutPress"
                                width="100%"
                                class="updateProfileButton"
                            />
                        </l:VerticalLayout>
                    </VBox>

                    <!-- Right side: User information -->
                    <VBox
                        id="_IDGenVBox3"
                        class="profileBox"
                        alignItems="Start"
                        justifyContent="Center"
                        width="50%"
                    >
                        <Label
                            id="userInfoTitle"
                            text="{i18n>userInfoTitle}"
                            class="userInfoTitle"
                        />

                        <Text
                            id="emailText"
                            text="{i18n>emailLabel} {userInfo>/email}"
                            class="userInfoText"
                        />

                        <Text
                            id="companyText"
                            text="{i18n>companylabel}: {userInfo>/company}"
                            class="userInfoText"
                        />

                        <Text
                            id="roleText"
                            text="{i18n>rolelabel}: {userInfo>/role}"
                            class="userInfoText"
                        />
                    </VBox>
                </HBox>
            </VBox>
        </content>
    </Page>
</mvc:View>
