<mvc:View
    controllerName="flexso.controller.Profile"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
>
    <Page
        id="profilePage"
        title="{i18n>profileTitle}"
        class="profilePage"
    >
        <headerContent>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button
                    id="languageButton"
                    icon="sap-icon://globe"
                    press="onDropdownPress"
                />
                <Button
                    id="_IDGenButton3"
                    icon="sap-icon://home"
                    press="onBackToHome"
                />
                <Button
                    id="_IDGenButton4"
                    icon="sap-icon://person-placeholder"
                    press="onProfileButtonClick"
                />
                <Button
                    id="_IDGenButton5"
                    icon="sap-icon://log"
                    press="onLogoutPress"
                />
            </Toolbar>
        </headerContent>

        <content>
            <Image
                id="_IDGenImage1"
                src="{imageModel>/path}"
                class="profileImage"
            />

            <FlexBox
                id="_IDGenFlexBox"
                class="flex-container"
                alignItems="Start"
                justifyContent="SpaceBetween"
                width="100%"
            >
                <VBox
                    id="_IDGenVBox3"
                    class="profileBox"
                    alignItems="Start"
                    justifyContent="Center"
                    width="45%"
                >
                    <Title
                        id="userInfoTitle"
                        text="{i18n>userInfoTitle}"
                        class="userInfoTitle"
                    />
                    <Text
                        id="emailText"
                        text="{i18n>emailLabel}: {userInfo>/email}"
                        class="userInfoText"
                    />

                    <!-- Street Text -->
                    <Text
                        id="streetText"
                        text="{i18n>streetLabel}: {userInfo>/street}"
                        class="userInfoText"
                    />

                    <!-- House Number Text -->
                    <Text
                        id="hnumberText"
                        text="{i18n>hnumberLabel}: {userInfo>/hnumber}"
                        class="userInfoText"
                    />

                    <!-- City Text -->
                    <Text
                        id="cityText"
                        text="{i18n>cityLabel}: {userInfo>/city}"
                        class="userInfoText"
                    />

                    <!-- Country Text -->
                    <Text
                        id="countryText"
                        text="{i18n>countryLabel}: {userInfo>/country}"
                        class="userInfoText"
                    />

                    <!-- Zip Code Text -->
                    <Text
                        id="zipText"
                        text="{i18n>zipLabel}: {userInfo>/zip}"
                        class="userInfoText"
                    />

                    <Text
                        id="firstNameText"
                        text="{i18n>firstname}: {userInfo>/firstname}"
                        class="userInfoText"
                    />
                    <Text
                        id="lastNameText"
                        text="{i18n>lastname}: {userInfo>/lastname}"
                        class="userInfoText"
                    />
                    <Text
                        id="companyText"
                        text="{i18n>companylabel}: {userInfo>/company}"
                        class="userInfoText"
                    />

                    <!-- Phone Text -->
                    <Text
                        id="phoneText"
                        text="{i18n>phoneLabel}: {userInfo>/phone}"
                        class="userInfoText"
                    />

                    <!-- Gender Text -->
                    <Text
                        id="genderText"
                        text="{i18n>genderLabel}: {= ${userInfo>/gender} === 'male' ? ${i18n>genderMale} : ${userInfo>/gender} === 'female' ? ${i18n>genderFemale} : ${i18n>genderOther}}"
                        class="userInfoText"
                    />
                    <!-- Birthdate Text -->
                    <Text
                        id="bdateText"
                        text="{i18n>birthdateLabel}: {userInfo>/bdate}"
                        class="userInfoText"
                    />
                </VBox>
            </FlexBox>
            <Button
                id="_IDGenButton1"
                text="{i18n>updateProfileButton}"
                press="onUpdateProfilePressNav"
                class="updateProfileButton"
            />
            <Button
                id="_IDGenButton2"
                text="{i18n>loguit}"
                press="onLogoutPress"
                class="logoutButton"
            />
        </content>
    </Page>
    <Popover
        id="popover"
        placement="Auto"
        showArrow="true"
        title="{i18n>Menu}"
        contentWidth="auto"
    >
        <content>
            <VBox
                id="_IDGenVBox"
                width="100%"
            >
                <Button
                    id="_IDGenButton"
                    text="{i18n>EN}"
                    press="onSwitchToEnglish"
                    width="100%"
                />
                <Button
                    id="_IDGenButton10"
                    text="{i18n>NL}"
                    press="onSwitchToDutch"
                    width="100%"
                />
            </VBox>
        </content>
    </Popover>
</mvc:View>
