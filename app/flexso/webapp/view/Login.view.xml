<mvc:View
    controllerName="flexso.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
>
    <Page
        id="loginPage"
        title="Flexso"
        class="loginPage"
    >
        <headerContent>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button
                    id="languageButton"
                    icon="sap-icon://globe"
                    press="onDropdownPress"
                />
            </Toolbar>
        </headerContent>

        <content>
            <VBox
                id="_IDGenVBox1"
                class="loginBox"
            >
                <l:VerticalLayout
                    id="_IDGenVerticalLayout1"
                    class="loginLayout"
                >
                    <Image
                        id="_IDGenImage1"
                        src="{imageModel>/path}"
                        width="50%"
                        height="50%"
                        class="loginImage"
                    />
                    <!-- Title -->
                    <Title
                        id="_IDGenTitle1"
                        text="{i18n>titleLoginPage}"
                        level="H2"
                        class="loginTitle"
                    />

                    <!-- Email Label -->
                    <Label
                        id="_IDGenLabel1"
                        text="{i18n>emailLabel}"
                        class="loginLabel"
                    />
                    <!-- Username Input -->
                    <Input
                        id="usernameInput"
                        value="Admin.flexso@flexso.com"
                        placeholder="{i18n>emailPlaceholder}"
                        width="100%"
                        class="loginInput"
                    />

                    <!-- Password Label -->
                    <Label
                        id="_IDGenLabel2"
                        text="{i18n>passwordLabel}"
                        class="loginLabel"
                    />
                    <!-- Password Input -->
                    <Input
                        id="passwordInput"
                        type="Password"
                        value="FlexsoAdmin"
                        placeholder="{i18n>passwordPlaceholder}"
                        width="100%"
                        class="loginInput"
                    />

                    <!-- Stay Logged In Checkbox -->
                    <CheckBox
                        text="{i18n>stayLoggedIn}"
                        id="stayLoggedInCheckbox"
                        selected="false"
                        class="stayLoggedInCheckbox"
                    />

                    <!-- Login Button -->
                    <Button
                        id="_IDGenButton1"
                        text="{i18n>titleLoginPage}"
                        press="onLoginPress"
                        width="100%"
                        class="loginButton"
                    />

                    <!-- Forgot Password Link -->
                    <Link
                        id="forgotPasswordLink"
                        text="{i18n>forgotPasswordLink}"
                        press="onForgotPasswordPress"
                        class="forgotPasswordLink"
                    />

                    <Button
                        id="_IDGenButton2"
                        text="{i18n>registerLink}"
                        press="onRegisterPress"
                        width="100%"
                        class="registerButton"
                    />
                </l:VerticalLayout>
            </VBox>
        </content>
    </Page>
    <Popover
        id="popover"
        placement="Auto"
        showArrow="true"
        title="{i18n>Menu}"
        contentWidth="auto"
    >
        <content>
            <VBox id="_IDGenVBox3">
                <Button
                    id="_IDGenButton9"
                    text="{i18n>EN}"
                    press="onSwitchToEnglish"
                    width="100%"
                />
                <Button
                    id="_IDGenButton10"
                    text="{i18n>NL}"
                    press="onSwitchToDutch"
                    width="100%"
                />
            </VBox>
        </content>
    </Popover>
</mvc:View>
