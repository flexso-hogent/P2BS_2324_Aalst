<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="flexso.controller.Overview"
>
    <Page
        id="overviewPage"
        title="{i18n>overview}"
    >
        <headerContent>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button
                    id="languageButton"
                    icon="sap-icon://globe"
                    press="onDropdownPress"
                />
                <Button
                    id="_IDGenButton3"
                    icon="sap-icon://home"
                    press="onBackToHome"
                />
                <Button
                    id="_IDGenButton4"
                    icon="sap-icon://person-placeholder"
                    press="onProfileButtonClick"
                />
                <Button
                    id="_IDGenButton5"
                    icon="sap-icon://log"
                    press="onLogoutPress"
                />
            </Toolbar>
        </headerContent>
        <List
            id="eventList"
            items="{eventModel>/}"
        >
            <items>
                <StandardListItem
                    id="_IDGenStandardListItem1"
                    title="{eventModel>Name}"
                    info="{eventModel>SDate} {i18n>until} {eventModel>EDate} "
                    description="{eventModel>Description}"
                />
            </items>
        </List>
    </Page>

    <!-- Popover should be part of the View, not a direct sibling of Page -->
    <Popover
        id="popover"
        placement="Auto"
        showArrow="true"
        title="{i18n>Menu}"
        contentWidth="auto"
    >
        <content>
            <VBox
                id="_IDGenVBox1"
                width="100%"
            >
                <Button
                    id="_IDGenButton1"
                    text="{i18n>EN}"
                    press="onSwitchToEnglish"
                    width="100%"
                />
                <Button
                    id="_IDGenButton2"
                    text="{i18n>NL}"
                    press="onSwitchToDutch"
                    width="100%"
                />
            </VBox>
        </content>
    </Popover>
</mvc:View>