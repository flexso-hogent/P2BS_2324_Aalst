<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    controllerName="flexso.controller.Overview"
>
    <Page
        id="overviewPage"
        title="Flexso"
        enableScrolling="false"
    >
        <headerContent>
            <Toolbar id="_IDGenToolbar1">
                <content>
                    <HBox id="_IDGenHBox4">
                        <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                        <Button
                            id="_IDGenButton11"
                            icon="sap-icon://globe"
                            press="onDropdownPress"
                        />
                        <Button
                            id="_IDGenButton12"
                            icon="sap-icon://home"
                            press="onBackToHome"
                        />
                        <Button
                            id="_IDGenButton13"
                            icon="sap-icon://person-placeholder"
                            press="onProfileButtonClick"
                        />
                        <Button
                            id="_IDGenButton14"
                            icon="sap-icon://log"
                            press="onLogoutPress"
                        />
                    </HBox>
                </content>
            </Toolbar>
        </headerContent>

      <OverflowToolbar id="_IDGenOverflowToolbar1">
    <SearchField
        id="sessieZoekenInput"
        liveChange="onSearchLiveChange"
        width="16%"
        placeholder="{i18n>phSearch1}"
    />
    <SearchField
        id="LocatieZoekenInput"
        liveChange="onLocatieZoekenLiveChange"
        width="16%"
        placeholder="{i18n>phsearch2}"
    />
        <OverflowToolbarButton
            id="_IDGenOverflowToolbarButton1"
            tooltip="Sort"
            type="Transparent"
            text="Sort"
            icon="sap-icon://sort"
            press="onSort"
           
        />

</OverflowToolbar>

        <l:Splitter
            id="_IDGenSplitter1"
            height="100%"
        >
            <!-- EVENT BOX -->
            <Table
                id="eventTable"
                items="{ path: 'eventModel>/' }"
                noDataText="{i18n>noData}"
            >
                <columns>
                    <Column id="_IDGenColumn1">
                        <Text
                            id="_IDGenText1"
                            text="{i18n>OverviewTitle}"
                        />
                    </Column>
                    <Column id="_IDGenColumn2">
                        <Text
                            id="_IDGenText2"
                            text="{i18n>Location}"
                        />
                    </Column>
                    <Column id="_IDGenColumn3">
                        <Text
                            id="_IDGenText3"
                            text="{i18n>StartDate}"
                        />
                    </Column>
                    <Column id="_IDGenColumn4">
                        <Text
                            id="_IDGenText4"
                            text="{i18n>EndDate}"
                        />
                    </Column>
                    <Column id="_IDGenColumn5">
                        <Text
                            id="_IDGenText5"
                            text="{i18n>Description}"
                        />
                    </Column>
                    <Column id="_IDGenColumn6">
                        <Text
                            id="_IDGenText6"
                            text="{i18n>EventSessions}"
                        />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="_IDGenColumnListItem1">
                        <cells>
                            <Text
                                id="_IDGenText7"
                                text="{eventModel>Name}"
                            />
                            <Text
                                id="_IDGenText8"
                                text="{eventModel>location}"
                            />
                            <Text
                                id="_IDGenText9"
                                text="{eventModel>SDate}"
                            />
                            <Text
                                id="_IDGenText10"
                                text="{eventModel>EDate}"
                            />
                            <Text
                                id="_IDGenText11"
                                text="{eventModel>description}"
                            />
                            <Button
                                id="expandSessionsButton"
                                icon="sap-icon://process"
                                press="onViewSessionsPress"
                                class="expandSessionsButton"
                                width="45%"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
                <layoutData>
                    <l:SplitterLayoutData
                        id="_IDGenSplitterLayoutData1"
                        size="100%"
                        resizable="false"
                    />
                </layoutData>
            </Table>

            <!-- SESSIE BOX -->
            <VBox id="sessionsBox">
            <Button id="buttonAddSessie"
                icon = "sap-icon://add"
                press="voegSessieToe"
                width="100%"
                text="{i18n>ADDSESSIE}"> 

                </Button>
                <List
                    id="sessionsList"
                    items="{ path: 'sessionModel>/' }"
                    noDataText="{i18n>noData}"
                >
                
                    <CustomListItem
                        id="sessionListItem"
                        press="onSessionSelect"
                        class="sessionListItem"
                        
                    >
                    
                        <VBox id="_IDGenVBox1">
                            <HBox id="_IDGenHBox1">
                                <Label
                                    id="_IDGenLabel11"
                                    text="{sessionModel>title}"
                                />
                            </HBox>
                            <HBox id="_IDGenHBox2">
                                <Label
                                    id="label"
                                    text="{i18n>Date}:  "
                                />
                                <Text id="label2" text ="{sessionModel>startDate} {i18n>until} {sessionModel>endDate}" class="makeBlack"/>
                            </HBox>
                            <HBox id="_IDGenHBox6">
                            <Label id="_IDGenLabel2" text="{i18n>duration}:"></Label>
                                <Text
                                    id="_IDGenLabel1"
                                    text="{sessionModel>startTime} {i18n>until} {sessionModel>endTime}"
                                    class="makeBlack"
                                />
                            </HBox>
                            <HBox id="_IDGenHBox7" 
                            >
                            <Label id="_IDGenLabel3" text="{i18n>Room}:"></Label>
                            <Text id="_IDGenText111" text="{sessionModel>location}" class="makeBlack"></Text>
                            </HBox>
                            <HBox id="_IDGenHBox3">
                                <Label
                                    id="_IDGenLabel18"
                                    text="{i18n>TotalSeats}:"
                                />
                                <Text
                                    id="text"
                                    text="{sessionModel>totalSeats}"
                                    class="makeBlack"
                                />
                            </HBox>
                            <HBox id="_IDGenHBox5">
                                <Label
                                    id="_IDGenLabel17"
                                    text="{i18n>Speaker}:"
                                />
                                <Text
                                    id="text1"
                                    text="{sessionModel>speaker}"
                                    class ="makeBlack"
                                />
                            </HBox>
                        </VBox>
                        <Button
                            id="_IDGenButton2"
                            text="{i18n>register}"
                            press="onRegisterPress"
                            class="registerButton"
                        />
                    </CustomListItem>
                </List>
                
            </VBox>
        </l:Splitter>
    </Page>
    <Popover
        id="popover"
        placement="Auto"
        showArrow="true"
        title="{i18n>Menu}"
        contentWidth="auto"
    >


        <content>
            <VBox id="_IDGenVBox3">
                <Button
                    id="_IDGenButton9"
                    text="{i18n>EN}"
                    press="onSwitchToEnglish"
                    width="100%"
                />
                <Button
                    id="_IDGenButton10"
                    text="{i18n>NL}"
                    press="onSwitchToDutch"
                    width="100%"
                />
            </VBox>
        </content>
    </Popover>
</mvc:View>
