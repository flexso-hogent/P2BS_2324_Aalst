<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    controllerName="flexso.controller.Registersession"
>
    <Page
        id="registerSessionPage"
        title="Flexso"
        class="backgroundEventCreate"
    >
        <headerContent>
            <core:Fragment
                fragmentName="flexso.fragment.Toolbar"
                type="XML"
            />
        </headerContent>
        <content>
            <VBox
                id="sessionInfoBox"
                class="infoBox"
            >
                <Title
                    id="TitleRegisterSession"
                    text="{i18n>TitleRegisterSession}"
                    class="titlesPages"
                />
                <Label
                    id="_IDGenLabel1"
                    text="{i18n>SessionInformation}"
                    class="sectionHeader"
                />
                <VBox id="_IDGenVBox1">
                    <Label
                        id="_IDGenLabel2"
                        text="{i18n>Title}"
                    />
                    <Text
                        id="_IDGenText1"
                        text="{sessionModel>/title}"
                    />
                </VBox>

                <VBox id="_IDGenVBox2">
                    <Label
                        id="_IDGenLabel3"
                        text="{i18n>StartDate}"
                    />
                    <Text
                        id="_IDGenText2"
                        text="{sessionModel>/startDate}"
                        class="dateText"
                    />
                </VBox>

                <VBox id="_IDGenVBox">
                    <Label
                        id="_IDGenLabel4"
                        text="{i18n>EndDate}"
                    />
                    <Text
                        id="_IDGenText3"
                        text="{sessionModel>/endDate}"
                        class="dateText"
                    />
                </VBox>

                <VBox id="_IDGenVBox4">
                    <Label
                        id="_IDGenLabel5"
                        text="{i18n>Room}"
                    />
                    <Text
                        id="_IDGenText4"
                        text="{sessionModel>/location}"
                    />
                </VBox>
                <VBox id="_IDGenVBox5">
                    <Label
                        id="_IDGenLabel6"
                        text="{i18n>Speaker}"
                    />
                    <Text
                        id="_IDGenText5"
                        text="{sessionModel>/speaker}"
                    />
                </VBox>
                <VBox id="_IDGenVBox6">
                    <Label
                        id="_IDGenLabel7"
                        text="{i18n>TotalSeats}"
                    />
                    <Text
                        id="_IDGenText6"
                        text="{sessionModel>/totalSeats}"
                    />
                </VBox>
                <VBox id="_IDGenVBox7">
                    <Label
                        id="_IDGenLabel8"
                        text="{i18n>Description}"
                    />
                    <Text
                        id="_IDGenText7"
                        text="{sessionModel>/description}"
                    />
                </VBox>

                <Label
                    id="_IDGenLabel9"
                    text="{i18n>PersonalInformation}"
                    class="sectionHeader2"
                />
                <VBox
                    id="userInfoBox"
                    class="infoBox"
                    width="100%"
                >
                    <Label
                        id="_IDGenLabel10"
                        text="{i18n>firstNameLabel}"
                    />
                    <Text
                        id="_IDGenText8"
                        text="{userData>/firstname}"
                    />
                    <Label
                        id="_IDGenLabel11"
                        text="{i18n>lastNameLabel}"
                    />
                    <Text
                        id="_IDGenText9"
                        text="{userData>/lastname}"
                    />
                    <Label
                        id="_IDGenLabel12"
                        text="{i18n>Email}"
                    />
                    <Text
                        id="_IDGenText10"
                        text="{userData>/email}"
                    />
                </VBox>
                <HBox
                    id="_IDGenHBox2"
                    justifyContent="Center"
                    alignItems="Center"
                >
                    <Button
                        id="_IDGenButton1"
                        text="{i18n>register}"
                        press="onRegisterPress"
                        class="sessionRegisterButtons"
                    />
                    <Button
                        id="_IDGenButton2"
                        text="{i18n>goBack}"
                        press="OnGoBackPress"
                        class="sessionRegisterButtons"
                    />
                </HBox>
            </VBox>
        </content>
    </Page>

    <!-- Popover Definition -->
    <core:Fragment
        fragmentName="flexso.fragment.Popover"
        type="XML"
    />
</mvc:View>
