<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="flexso.controller.Registersession"
>
    <Page
        id="registerSessionPage"
        title="Flexso"
    >
        <headerContent>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button
                    id="languageButton"
                    icon="sap-icon://globe"
                    press="onDropdownPress"
                />
                <Button
                    id="_IDGenButton3"
                    icon="sap-icon://home"
                    press="onBackToHome"
                />
                <Button
                    id="_IDGenButton4"
                    icon="sap-icon://person-placeholder"
                    press="onProfileButtonClick"
                />
                <Button
                    id="_IDGenButton5"
                    icon="sap-icon://log"
                    press="onLogoutPress"
                />
            </Toolbar>
        </headerContent>
        <content>
            <VBox
                id="sessionInfoBox"
                class="infoBox"
            >
                <Title 
                    id="TitleRegisterSession"
                    text="{i18n>TitleRegisterSession}" 
                    class="titlesPages"/>
                <Label
                    id="_IDGenLabel1"
                    text="Session Information"
                    class="sectionHeader"
                />
                <VBox id="_IDGenVBox1">
                    <Label
                        id="_IDGenLabel2"
                        text="Title:"
                    />
                    <Text
                        id="_IDGenText1"
                        text="{sessionModel>/title}"
                    />
                </VBox>
                <HBox id="_IDGenHBox1">
                    <VBox id="_IDGenVBox2">
                        <Label
                            id="_IDGenLabel3"
                            text="Start Date:"
                        />
                        <Text
                            id="_IDGenText2"
                            text="{sessionModel>/startDate}"
                            class="dateText"
                        />
                    </VBox>
                    <VBox id="_IDGenVBox3">
                        <Label
                            id="_IDGenLabel4"
                            text="End Date:"
                        />
                        <Text
                            id="_IDGenText3"
                            text="{sessionModel>/endDate}"
                            class="dateText"
                        />
                    </VBox>

                </HBox>

                <VBox id="_IDGenVBox4">
                    <Label
                        id="_IDGenLabel5"
                        text="Location:"
                    />
                    <Text
                        id="_IDGenText4"
                        text="{sessionModel>/location}"
                    />
                </VBox>
                <VBox id="_IDGenVBox5">
                    <Label
                        id="_IDGenLabel6"
                        text="Speaker:"
                    />
                    <Text
                        id="_IDGenText5"
                        text="{sessionModel>/speaker}"
                    />
                </VBox>
                <VBox id="_IDGenVBox6">
                    <Label
                        id="_IDGenLabel7"
                        text="Total Seats:"
                    />
                    <Text
                        id="_IDGenText6"
                        text="{sessionModel>/totalSeats}"
                    />
                </VBox>
                <VBox id="_IDGenVBox7">
                    <Label
                        id="_IDGenLabel8"
                        text="Description:"
                    />
                    <Text
                        id="_IDGenText7"
                        text="{sessionModel>/description}"
                    />
                </VBox>

                <Label
                    id="_IDGenLabel9"
                    text="Your Information"
                    class="sectionHeader"
                />
                <VBox
                    id="userInfoBox"
                    class="infoBox"
                >
                    <Label
                        id="_IDGenLabel10"
                        text="First Name:"
                    />
                    <Text
                        id="_IDGenText8"
                        text="{userData>/firstname}"
                    />
                    <Label
                        id="_IDGenLabel11"
                        text="Last Name:"
                    />
                    <Text
                        id="_IDGenText9"
                        text="{userData>/lastname}"
                    />
                    <Label
                        id="_IDGenLabel12"
                        text="Email:"
                    />
                    <Text
                        id="_IDGenText10"
                        text="{userData>/email}"
                    />
                </VBox>
                 <HBox
                    id="_IDGenHBox3"
                    class="sessionRegisterButtonsContainer"
                >
                    <Button
                        id="_IDGenButton1"
                        text="Register"
                        press="onRegisterPress"
                        class="sessionRegisterButtons"
                    />

                    <Button
                        id="_IDGenButton2"
                        text="Go back"
                        press="OnGoBackPress"
                        class="sessionRegisterButtons"
                    />
                </HBox>
            </VBox>
           
        </content>
    </Page>

    <Popover
        id="popover"
        placement="Auto"
        showArrow="true"
        title="{i18n>Menu}"
        contentWidth="auto"
    >
        <content>
            <VBox
                id="_IDGenVBox"
            >
                <Button
                    id="_IDGenButton"
                    text="{i18n>EN}"
                    press="onSwitchToEnglish"
                />
                <Button
                    id="_IDGenButton10"
                    text="{i18n>NL}"
                    press="onSwitchToDutch"
                />
            </VBox>
        </content>
    </Popover>
</mvc:View>
