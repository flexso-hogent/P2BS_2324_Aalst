<mvc:View
    controllerName="flexso.controller.List"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <List
            id="list1"
            items="{/Products}"
            mode="SingleSelectMaster"
        >
            <items>
                <StandardListItem
                    id="_IDGenStandardListItem1"
                    title="{Name}"
                    description="{ProductId}"
                />
            </items>
        </List>
    </Page>
</mvc:View>
