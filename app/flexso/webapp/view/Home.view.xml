<mvc:View
    controllerName="flexso.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:tnt="sap.tnt"
    xmlns:core="sap.ui.core"
    displayBlock="true"
>
    <Page
        id="_IDGenPage1"
        title="{i18n>home}"
        enableScrolling="false"
    >
        <headerContent>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button
                    id="_IDGenButton3"
                    text="{i18n>EN}"
                    press="onSwitchToEnglish"
                />
                <Button
                    id="_IDGenButton4"
                    text="{i18n>NL}"
                    press="onSwitchToDutch"
                />

                <Button
                    id="_IDGenProfileButton"
                    icon="sap-icon://person-placeholder"
                    press="onProfileButtonClick"
                />
            </Toolbar>
        </headerContent>

        <content>
            <VBox
                id="_IDGenVBox1"
                alignItems="Center"
                justifyContent="Center"
                class="sapUiSmallMarginBegin sapUiSmallMarginTop"
            >
                <!-- Title with Cool Animation -->
                <Title
                    id="_IDGenTitle1"
                    text="{i18n>titleHomePage}"
                    class="coolTitleAnimation"
                />

                <!-- Information Content with Fade-in Animation -->
                <Text
                    id="_IDGenText1"
                    text="{i18n>homePageText}"
                    textAlign="Center"
                    class="fadeIn"
                />

                <!-- Add any additional content here as needed -->
            </VBox>

            <!-- Spacer to push the grid further down -->
            <ToolbarSpacer id="_IDGenToolbarSpacer2" />

            <!-- Grid for all possibilities -->
            <l:Grid
                id="_IDGenGrid"
                class="sapUiSmallMargin sapUiContentPadding"
                defaultSpan="XL3 L3 M3 S6"
            >
                <!-- Feedback Button -->
                <Button
                    id="_IDGenButton5"
                    text="{i18n>feedbackButton}"
                    press="onFeedbackPress"
                />

                <!-- Overview Event Button -->
                <Button
                    id="_IDGenButton6"
                    text="{i18n>overviewEventButton}"
                    press="onGoToOverviewEventPress"
                />
                <Button
                    id="_IDGenButton7"
                    text="{i18n>createEventButton}"
                    press=""
                />
                <Button
                    id="_IDGenButton8"
                    text="{i18n>createSessionButton}"
                    press=""
                />

                <!-- Add more buttons here as needed -->
            </l:Grid>
            <Title
                id="_IDGenTitle2"
                text="{i18n>myEventTitle}"
                level="H2"
                class="sapUiSmallMarginBegin"
            />
        </content>
    </Page>
</mvc:View>
