<mvc:View
    controllerName="flexso.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:tnt="sap.tnt"
    xmlns:core="sap.ui.core"
    displayBlock="true"
>
    <Page
        id="_IDGenPage1"
        title="Flexso"
        enableScrolling="true"
        class="titlesHomepage"
    >
        <headerContent>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button
                    id="languageButton"
                    icon="sap-icon://globe"
                    press="onDropdownPress"
                />
                <Button
                    id="_IDGenButton3"
                    icon="sap-icon://home"
                    press="onBackToHome"
                />
                <Button
                    id="_IDGenButton4"
                    icon="sap-icon://person-placeholder"
                    press="onProfileButtonClick"
                />
                <Button
                    id="_IDGenButton8"
                    icon="sap-icon://log"
                    press="onLogoutPress"
                />
            </Toolbar>
        </headerContent>

        <content>
            <VBox
                id="_IDGenVBox1"
                alignItems="Center"
                justifyContent="Center"
                class="sapUiSmallMarginBegin sapUiSmallMarginTop"
            >
                <!-- Title with Cool Animation -->
                <Title
                    id="_IDGenTitle1"
                    text="{i18n>titleHomePage}"
                    class="coolTitleAnimation"
                />

                <!-- Information Content with Fade-in Animation -->
                <Text
                    id="_IDGenText1"
                    text="{i18n>homePageText}"
                    textAlign="Center"
                    class="fadeIn"
                />

                <!-- Add any additional content here as needed -->
            </VBox>

            <!-- Spacer to push the buttons further down -->
            <ToolbarSpacer id="_IDGenToolbarSpacer2" />

            <!-- FlexBox for Buttons -->
            <FlexBox
                id="_IDGenFlexBox"
                justifyContent="Center"
                wrap="Wrap"
                alignItems="Center"
                class="sapUiSmallMargin sapUiContentPadding"
            >
                <!-- Feedback Button -->
                <Button
                    id="_IDGenButton5"
                    text="{i18n>feedbackButton}"
                    press="onFeedbackPress"
                    class="sapUiSmallMarginEnd"
                />
                <!-- Overview Event Button -->
                <Button
                    id="_IDGenButton6"
                    text="{i18n>overviewEventButton}"
                    press="onGoToOverviewEventPress"
                    class="sapUiSmallMarginEnd"
                />
                <!-- Create Session Button -->

                <!-- Add more buttons here as needed -->
            </FlexBox>

            <!-- FlexBox for Create Buttons -->

            <FlexBox
                id="_IDGenFlexBox1"
                justifyContent="Center"
                wrap="Wrap"
                alignItems="Center"
                class="sapUiSmallMargin sapUiContentPadding"
                visible="{imageModel>/isAdmin}"
            >
                <!-- Create Event Button -->
                <Button
                    id="_IDGenButtonCreateEvent"
                    text="{i18n>createEventButton}"
                    press="onGoToCreateEventPress"
                    class="sapUiSmallMarginEnd"
                />

                <!-- Create Session Button -->
                <Button
                    id="_IDGenButtonCreateSession"
                    text="{i18n>createSessionButton}"
                    press="onGoToCreateSessionPress"
                    class="sapUiSmallMarginEnd"
                />
            </FlexBox>

            <Title
                id="_IDGenTitle"
                text="{i18n>myEventTitleSessions}"
                level="H2"
                class="sapUiSmallMarginBegin"
            />

            <VBox
                id="_IDGenVBox"
                class="sapUiSmallMarginBegin"
            >
                <Label
                    id="_IDGenLabel"
                    text="{i18n>SessionHomeTitle}"
                    class="sapUiTinyMarginBottom"
                />
                <List
                    id="_IDGenList"
                    items="{imageModel>/registeredSessionsData}"
                    noDataText="{i18n>noDataTextSessions}"
                >
                    <StandardListItem
                        id="_IDGenStandardListItem"
                        title="{imageModel>title}"
                        description="{= 'Start Date: ' + ${imageModel>startDate} + ', End Date: ' + ${imageModel>endDate} + '\n' + 
                       'Start Time: ' + ${imageModel>startTime} + ', End Time: ' + ${imageModel>endTime} + '\n' + 
                       'Total Seats: ' + ${imageModel>totalSeats} + ', Speaker: ' + ${imageModel>speaker}}"
                    />
                </List>
            </VBox>
            <!-- Title for Feedback Section -->
            <Title
                id="_IDGenTitle2"
                text="{i18n>myEventTitle}"
                level="H2"
                class="sapUiSmallMarginBegin"
            />

            <VBox
                id="_IDGenVBox2"
                class="sapUiSmallMarginBegin"
            >
                <Label
                    id="_IDGenLabel1"
                    text="{i18n>FeedbackHomeTitle}"
                    class="sapUiTinyMarginBottom"
                />
                <List
                    id="_IDGenList1"
                    items="{imageModel>/feedbackData}"
                    noDataText="{i18n>noDataText}"
                >
                    <StandardListItem
                        id="_IDGenStandardListItem2"
                        title="{imageModel>SessionTitle}"
                        description="{=${imageModel>Review} + ('⭐'.repeat(${imageModel>Rating})) }"
                    />
                </List>
            </VBox>
        </content>
    </Page>

    <!-- Popover Definition -->
    <Popover
        id="popover"
        placement="Auto"
        showArrow="true"
        title="{i18n>Menu}"
        contentWidth="auto"
    >
        <content>
            <VBox id="_IDGenVBox3">
                <Button
                    id="_IDGenButton9"
                    text="{i18n>EN}"
                    press="onSwitchToEnglish"
                    width="100%"
                />
                <Button
                    id="_IDGenButton10"
                    text="{i18n>NL}"
                    press="onSwitchToDutch"
                    width="100%"
                />
            </VBox>
        </content>
    </Popover>
</mvc:View>
