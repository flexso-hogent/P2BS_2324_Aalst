<mvc:View
    controllerName="flexso.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:tnt="sap.tnt"
    xmlns:core="sap.ui.core"
    displayBlock="true"
>
    <Page
        id="_IDGenPage1"
        title="{i18n>home}"
        enableScrolling="false"
    >
        <headerContent>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button
                    id="_IDGenButton3"
                    text="{i18n>EN}"
                    press="onSwitchToEnglish"
                />
                <Button
                    id="_IDGenButton4"
                    text="{i18n>NL}"
                    press="onSwitchToDutch"
                />

                <Button
                    id="_IDGenProfileButton"
                    icon="{imageModel>/profileImagePath}"
                    press="onProfileButtonClick"
                />
            </Toolbar>
        </headerContent>

        <content>
            <VBox
                id="_IDGenVBox1"
                alignItems="Center"
                justifyContent="Center"
                class="sapUiSmallMarginBegin sapUiSmallMarginTop"
            >
                <!-- Title with Cool Animation -->
                <Title
                    id="_IDGenTitle1"
                    text="{i18n>titleHomePage}"
                    class="coolTitleAnimation"
                />

                <!-- Information Content with Fade-in Animation -->
                <Text
                    id="_IDGenText1"
                    text="{i18n>homePageText}"
                    textAlign="Center"
                    class="fadeIn"
                />

                <!-- Add any additional content here as needed -->
            </VBox>
            <VBox
                id="_IDGenVBox2"
                class="centerContainer"
            >
                <Button
                    id="_IDGenButton5"
                    text="{i18n>feedbackButton}"
                    press="onFeedbackPress"
                />
                
                <!-- New button for navigating to overview.event -->
                <Button
                    id="_IDGenButton6"
                    text="{i18n>overviewEventButton}"
                    press="onGoToOverviewEventPress"
                />
            </VBox>
        </content>
    </Page>
</mvc:View>
