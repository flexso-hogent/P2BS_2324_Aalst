<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    controllerName="flexso.controller.registrationoverview"
    class="registrationoverviewPage"
>
    <Page
        id="registrationoverview"
        title="Flexso"
        class="backgroundFlexso"
    >
        <headerContent>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button
                    id="languageButton"
                    icon="sap-icon://globe"
                    press="onDropdownPress"
                />
                <Button
                    id="_IDGenButton3"
                    icon="sap-icon://home"
                    press="onBackToHome"
                />
                <Button
                    id="_IDGenButton4"
                    icon="sap-icon://person-placeholder"
                    press="onProfileButtonClick"
                />
                <Button
                    id="_IDGenButton5"
                    icon="sap-icon://log"
                    press="onLogoutPress"
                />
            </Toolbar>
        </headerContent>
        <content>
            <VBox
                class="pageregistersessionoverview"
                id="_IDGenHBox1"
            >
                <!-- TITLE: EVENT REGISTRATION OVERVIEW-->
                <VBox
                    class="boxtitleregistrations"
                    id="boxtitleregistrations"
                >
                    <Title
                        class="titleRegistrations"
                        id="titleRegistrations"
                        text="{i18n>EventRegistrationOverview}"
                    />
                </VBox>

                <!-- TITLE: CHOOSE AN EVENT-->
                <!-- SELECT BOX WITH THE EVENTS-->
                <VBox id="_IDGenVBox2">
                    <Title
                        class="titleEventsChoose"
                        id="titleEventsChoose"
                        text="{i18n>ChooseAnEvent}"
                    />
                    <Select
                        id="sessionEventSelect"
                        change="onEventSelectChange"
                    />
                </VBox>

                <!-- TITLE: CHOOSE A SESSION-->
                <VBox id="sessionsBox">
                    <Title
                        class="titleEventsChoose"
                        id="titleSessionChoose"
                        text="{i18n>ChooseASession}"
                    />
                    <Select
                        id="sessionSelect1"
                        change="onSessionSelectChange"
                    >
                        <core:Item
                            id="_IDGenItem1"
                            key="{sessionModel>sessionID}"
                            text="{sessionModel>title}"
                        />
                    </Select>
                </VBox>

                <!-- Zoekbalk -->
                <SearchField
                    class="searchbarregister"
                    id="searchField"
                    width="100%"
                    liveChange="onLiveSearch"
                    placeholder="{i18n>searchbarparticipants}"
                />

                <!-- Lijst met deelnemers -->
                <Table
                    id="participantsTable"
                    items="{participantModel>/}"
                >
                    <columns>
                        <Column id="_IDGenColumn1">
                            <Text
                                id="_IDGenText1"
                                text="Name"
                            />
                        </Column>
                        <Column id="_IDGenColumn2">
                            <Text
                                id="_IDGenText2"
                                text="Email"
                            />
                        </Column>
                        <Column id="_IDGenColumn3">
                            <Text
                                id="_IDGenText3"
                                text="Company"
                            />
                        </Column>

                        <Column id="_IDGenColumn5">
                            <Text
                                id="_IDGenText5"
                                text="Birth Date"
                            />
                        </Column>
                        <Column id="_IDGenColumn6">
                            <Text
                                id="_IDGenText6"
                                text="Phone"
                            />
                        </Column>
                        <Column id="_IDGenColumn7">
                            <Text
                                id="_IDGenText7"
                                text="Gender"
                            />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem id="_IDGenColumnListItem1">
                            <cells>
                                <Text
                                    id="_IDGenText8"
                                    text="{participantModel>firstname} {participantModel>lastname}"
                                />
                                <Text
                                    id="_IDGenText9"
                                    text="{participantModel>email}"
                                />
                                <Text
                                    id="_IDGenText10"
                                    text="{participantModel>company}"
                                />

                                <Text
                                    id="_IDGenText12"
                                    text="{participantModel>bdate}"
                                />
                                <Text
                                    id="_IDGenText13"
                                    text="{participantModel>phone}"
                                />
                                <Text
                                    id="_IDGenText14"
                                    text="{participantModel>gender}"
                                />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>

                <!-- Button terug naar home page-->
                <VBox
                    class="boxbutton"
                    id="_IDGenVBox3"
                >
                    <Button
                        class="buttonregistrationoverview"
                        id="_IDGenButton6S"
                        text="{i18n>BackToHome}"
                        press="onBackToHome"
                    />
                </VBox>
            </VBox>
        </content>
    </Page>
    <Popover
        id="popover"
        placement="Auto"
        showArrow="true"
        title="{i18n>Menu}"
        contentWidth="auto"
    >
        <content>
            <VBox id="_IDGenVBox4">
                <Button
                    id="_IDGenButton9"
                    text="{i18n>EN}"
                    press="onSwitchToEnglish"
                    width="100%"
                />
                <Button
                    id="_IDGenButton10"
                    text="{i18n>NL}"
                    press="onSwitchToDutch"
                    width="100%"
                />
            </VBox>
        </content>
    </Popover>
</mvc:View>
