<mvc:View
    controllerName="flexso.controller.Editevent"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:tnt="sap.tnt"
    xmlns:core="sap.ui.core"
    displayBlock="true"
>
    <Page
        id="editEventPage"
        title="{i18n>Flexso}"
        enableScrolling="true"
        class="sapUiResponsiveContentWidth"
    >
        <headerContent>
            <core:Fragment
                fragmentName="flexso.fragment.Toolbar"
                type="XML"
            />
        </headerContent>
        <content>
            <Title
                id="_IDGenTitle1"
                text="{i18n>EditEvent}"
                level="H2"
                class="editSessionTitle"
            />
            <VBox
                id="_IDGenVBox2"
                class="editSessionVBox"
            >
                <Label
                    id="label1"
                    text="{i18n>Titleevent}"
                />
                <Input
                    id="_IDGenInput1"
                    value="{eventModel>/title}"
                    placeholder="{i18n>Title}"
                />

                <Label
                    id="label2"
                    text="{i18n>startdate2}"
                />
                <DatePicker
                    id="_IDGenDatePicker1"
                    value="{eventModel>/startDate}"
                    placeholder="{i18n>startdate2}"
                />

                <Label
                    id="label3"
                    text="{i18n>enddate2}"
                />
                <DatePicker
                    id="_IDGenDatePicker2"
                    value="{eventModel>/endDate}"
                    placeholder="{i18n>enddate2}"
                />

                <Label
                    id="label4"
                    text="{i18n>LocationEvent}"
                />
                <Input
                    id="_IDGenInput2"
                    value="{eventModel>/location}"
                    placeholder="{i18n>Location}"
                />

                <Label
                    id="label5"
                    text="{i18n>descriptionEvent}"
                />
                <Input
                    id="_IDGenTextArea1"
                    value="{eventModel>/description}"
                    placeholder="{i18n>Description}"
                />

                <HBox
                    id="_IDGenHBox1"
                    class="buttonbox center-buttons"
                >
                    <Button
                        id="_IDGenButton1"
                        icon="sap-icon://save"
                        press="onSavePress"
                        class="editSessionButtons"
                    />
                    <Button
                        id="_IDGenButton2"
                        icon="sap-icon://delete"
                        press="onDeletePress"
                        type="Reject"
                        class="editSessionButtons"
                    />
                </HBox>

                <HBox
                    id="_IDGenHBox2"
                    class="buttonbox center-buttons"
                >
                    <Button
                        id="button1"
                        icon="sap-icon://nav-back"
                        text="{i18n>goBack}"
                        press="onBackPress"
                        class="editSessionButtons2"
                    />
                </HBox>
            </VBox>
        </content>
    </Page>
    <core:Fragment
        fragmentName="flexso.fragment.Popover"
        type="XML"
    />
</mvc:View>
