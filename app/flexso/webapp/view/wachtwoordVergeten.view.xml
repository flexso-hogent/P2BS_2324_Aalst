<mvc:View
    controllerName="flexso.controller.wachtwoordVergeten"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
>
    <Page
        id="page"
        title="{i18n>password}"
        showHeader="true"
        headerContent="headerContent"
    >
        <headerContent>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button
                    id="languageButton"
                    icon="sap-icon://globe"
                    press="onDropdownPress"
                />
            </Toolbar>
        </headerContent>
        <content>
            <VBox
                id="_IDGenVBox1"
                alignItems="Center"
                justifyContent="Center"
                width="100%"
            >
                <f:SimpleForm
                    id="forgotPasswordForm"
                    maxContainerCols="1"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanL="3"
                    labelSpanM="3"
                    emptySpanL="4"
                    emptySpanM="4"
                    columnsL="1"
                    columnsM="1"
                    width="100%"
                >
                    <Text
                        id="forgotPassword"
                        text="{i18n>forgotPassword}"
                    />
                    <Text
                        id="forgotPasswordText"
                        text="{i18n>forgotPasswordText}"
                    />
                    <Label
                        id="_IDGenLabel1"
                        text="{i18n>Email}"
                        class="sapUiSmallMarginTop"
                    />
                    <Input
                        id="emailInput"
                        type="Email"
                        placeholder="{i18n>EnterEmail}"
                        width="100%"
                    />
                </f:SimpleForm>
                <Button
                    id="_IDGenButton1"
                    text="{i18n>sendPasswordResetEmail}"
                    press="onSendPasswordResetEmail"
                    class="sapUiTinyMarginTopBottom"
                />
            </VBox>
        </content>
    </Page>
    <Popover
        id="popover"
        placement="Auto"
        showArrow="true"
        title="{i18n>Menu}"
        contentWidth="auto"
    >
        <content>
            <VBox id="_IDGenVBox3">
                <Button
                    id="_IDGenButton9"
                    text="{i18n>EN}"
                    press="onSwitchToEnglish"
                    width="100%"
                />
                <Button
                    id="_IDGenButton10"
                    text="{i18n>NL}"
                    press="onSwitchToDutch"
                    width="100%"
                />
            </VBox>
        </content>
    </Popover>
</mvc:View>
