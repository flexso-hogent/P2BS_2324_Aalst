<mvc:View
    controllerName="flexso.controller.wachtwoordVergeten"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    class="passwordResetPage"
>
    <Page
        id="page"
        title="Flexso"
        showHeader="true"
        headerContent="headerContent"
        class="backgroundEventCreate "
    >
        <headerContent>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button
                    id="languageButton"
                    icon="sap-icon://globe"
                    press="onDropdownPress"
                />
                <Button
                    id="backButton"
                    icon="sap-icon://nav-back"
                    press="onBackToHome"
                />
            </Toolbar>
        </headerContent>
        <content>
            <Title
                id="title"
                text="{i18n>forgotPassword}"
                class="CENTER_TITLE"
            />

            <VBox
                id="_IDGenVBox1"
                alignItems="Center"
                justifyContent="Center"
                class="sapUiSmallMarginTop centerVBox"
            >
                <f:SimpleForm
                    id="forgotPasswordForm"
                    maxContainerCols="1"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanL="3"
                    labelSpanM="3"
                    emptySpanL="4"
                    emptySpanM="4"
                    columnsL="1"
                    columnsM="1"
                >
                    <Text
                        id="forgotPassword"
                        text="{i18n>forgotPassword}"
                    />
                    <Text
                        id="forgotPasswordText"
                        text="{i18n>forgotPasswordText}"
                    />
                    <Label
                        id="_IDGenLabel1"
                        text="{i18n>Email}"
                        class="sapUiSmallMarginTop"
                    />
                    <VBox
                        id="_IDGenVBox4"
                        class="vboxPassword"
                    >
                        <Input
                            id="emailInput"
                            type="Email"
                            placeholder="{i18n>Email}"
                            width="100%"
                        />
                        <Label
                            id="id2"
                            text="{i18n>oldPassword}"
                        />
                        <HBox id="_IDGenHBox1">
                            <Input
                                id="oldPasswordInput"
                                type="Password"
                                placeholder="{i18n>oldPassword}"
                                width="90%"
                            />
                            <Button
                                id="_IDGenButton2"
                                icon="sap-icon://show"
                                press="togglePasswordVisibility"
                            />
                        </HBox>
                        <Label
                            id="id3"
                            text="{i18n>newPassword}"
                        />
                        <HBox id="_IDGenHBox2">
                            <Input
                                id="newPasswordInput"
                                type="Password"
                                placeholder="{i18n>newPassword}"
                                width="90%"
                            />
                            <Button
                                id="_IDGenButton3"
                                icon="sap-icon://show"
                                press="togglePasswordVisibility"
                            />
                        </HBox>
                        <Label
                            id="id4"
                            text="{i18n>confirmPassword}"
                        />
                        <HBox id="_IDGenHBox3">
                            <Input
                                id="confirmPasswordInput"
                                type="Password"
                                placeholder="{i18n>confirmPassword}"
                                width="90%"
                            />
                            <Button
                                id="_IDGenButton4"
                                icon="sap-icon://show"
                                press="togglePasswordVisibility"
                            />
                        </HBox>

                        <Button
                            id="_IDGenButton1"
                            text="{i18n>sendPasswordResetEmail}"
                            press="onSendPasswordResetEmail"
                            class="sapUiSmallMarginTop updateProfileButton"
                        />
                    </VBox>
                </f:SimpleForm>
            </VBox>
        </content>
    </Page>
    <core:Fragment
        fragmentName="flexso.fragment.Popover"
        type="XML"
    />
</mvc:View>
