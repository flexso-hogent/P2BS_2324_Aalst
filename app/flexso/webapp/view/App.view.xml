<mvc:View
    controllerName="flexso.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
>
    <App id="app">
        <Page
            id="appPage"
            title="Flexso"
        >
            <headerContent>
                <Toolbar id="_IDGenToolbar1">
                    <ToolbarSpacer id="_IDGenToolbarSpacer1" />

                    <Button
                        id="_IDGenButton3"
                        text="{i18n>EN}"
                        press="onSwitchToEnglish"
                    />
                    <Button
                        id="_IDGenButton4"
                        text="{i18n>NL}"
                        press="onSwitchToDutch"
                    />
                    <Button
                        id="_IDGenProfileButton"
                        icon="sap-icon://person-placeholder"
                        press="onProfileButtonClick"
                    />
                </Toolbar>
            </headerContent>
        </Page>
    </App>
</mvc:View>
