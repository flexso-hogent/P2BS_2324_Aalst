<mvc:View
    controllerName="flexso.controller.CreateSession"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    displayBlock="true"
>
    <Page
        id="_IDGenPage1"
        title="Flexso"
        class="feedbackPage"
        enableScrolling="false"
    >
        <headerContent>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button
                    id="languageButton"
                    icon="sap-icon://globe"
                    press="onDropdownPress"
                />
                <Button
                    id="_IDGenButton3"
                    icon="sap-icon://home"
                    press="onBackToHome"
                />
                <Button
                    id="_IDGenButton4"
                    icon="sap-icon://person-placeholder"
                    press="onProfileButtonClick"
                />
                <Button
                    id="_IDGenButton8"
                    icon="sap-icon://log"
                    press="onLogoutPress"
                />
            </Toolbar>
        </headerContent>
        <content>
            <VBox
                id="createSessionContent"
                class="createSessionBox"
                width="100%"
            >
                <l:VerticalLayout
                    id="_IDGenVerticalLayout1"
                    class="createSessionLayout"
                    width="100%"
                >
                    <Title
                        id="_IDGenTitle1"
                        text="{i18n>titleCreateSession}"
                        level="H2"
                        class="TitleCreateSession"
                    />
                    <Image
                        id="imageFlexso"
                        src="{imageModel>/path}"
                        class="registerImage"
                    />
                    <Label
                        id="_IDGenLabel1"
                        text="{i18n>SelectEvent}"
                        class="LabelCreateSession"
                    />
                    <Select
                        id="eventSelect"
                        items="{eventModel>/}"
                        width="50%"
                        class="InputCreateSession"
                        required="true"
                    >
                        <core:Item
                            id="_IDGenItem1"
                            key="{eventModel>eventID}"
                            text="{eventModel>Name}"
                        />
                    </Select>

                    <Input
                        id="_IDGenInput1"
                        value="{sessionModel>/title}"
                        placeholder="{i18n>Title}"
                        width="50%"
                        class="InputCreateSession"
                        required="true"
                    />
                    <DatePicker
                        id="_IDGenDatePicker1"
                        value="{sessionModel>/startDate}"
                        placeholder="{i18n>StartDate}"
                        width="50%"
                        class="InputCreateSession"
                        required="true"
                    />
                    <DatePicker
                        id="_IDGenDatePicker2"
                        value="{sessionModel>/endDate}"
                        placeholder="{i18n>EndDate}"
                        width="50%"
                        class="InputCreateSession"
                        required="true"
                    />
                    <TimePicker
                        id="_IDGenTimePicker1"
                        value="{sessionModel>/startTime}"
                        placeholder="{i18n>StartTime}"
                        width="50%"
                        class="InputCreateSession"
                        required="true"
                    />
                    <TimePicker
                        id="_IDGenTimePicker2"
                        value="{sessionModel>/endTime}"
                        placeholder="{i18n>EndTime}"
                        width="50%"
                        class="InputCreateSession"
                        required="true"
                    />
                    <Input
                        id="_IDGenInput2"
                        value="{sessionModel>/room}"
                        placeholder="{i18n>Room}"
                        width="50%"
                        class="InputCreateSession"
                        required="true"
                    />

                    <Input
                        id="_IDGenInput4"
                        value="{sessionModel>/speaker}"
                        placeholder="{i18n>Speaker}"
                        width="50%"
                        class="InputCreateSession"
                        required="true"
                    />
                    <Input
                        id="_IDGenInput5"
                        value="{sessionModel>/totalSeats}"
                        placeholder="{i18n>TotalSeats}"
                        width="50%"
                        type="Number"
                        class="InputCreateSession"
                        change="onTotalSeatsChange"
                        required="true"
                    />
                    <TextArea
                        id="_IDGenInput3"
                        value="{sessionModel>/description}"
                        placeholder="{i18n>Description}"
                        width="50%"
                        rows="5"
                        class="InputCreateSession"
                        required="true"
                    />

                    <Button
                        id="_IDGenButton9"
                        text="{i18n>CreateSession}"
                        press="onCreateSession"
                        width="30%"
                    />
                    <Button
                        id="_IDGenButton2"
                        text="{i18n>backToHomeButton}"
                        press="onBackToHome"
                        width="30%"
                    />

                    <Text
                        id="messageText"
                        visible="false"
                    />
                </l:VerticalLayout>
            </VBox>
        </content>
    </Page>
    <Popover
        id="popover"
        placement="Auto"
        showArrow="true"
        title="{i18n>Menu}"
        contentWidth="auto"
    >
        <content>
            <VBox
                id="_IDGenVBox"
                width="100%"
            >
                <Button
                    id="_IDGenButton"
                    text="{i18n>EN}"
                    press="onSwitchToEnglish"
                    width="100%"
                />
                <Button
                    id="_IDGenButton10"
                    text="{i18n>NL}"
                    press="onSwitchToDutch"
                    width="100%"
                />
            </VBox>
        </content>
    </Popover>
</mvc:View>
