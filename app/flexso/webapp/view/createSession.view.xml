<mvc:View
    controllerName="flexso.controller.CreateSession"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
>
    <Page
        id="_IDGenPage1"
        title="Create Session"
    >
        <headerContent>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button
                    id="languageButton"
                    icon="sap-icon://globe"
                    press="onDropdownPress"
                />
                <Button
                    id="_IDGenButton3"
                    icon="sap-icon://home"
                    press="onBackToHome"
                />
                <Button
                    id="_IDGenButton4"
                    icon="sap-icon://person-placeholder"
                    press="onProfileButtonClick"
                />
                <Button
                    id="_IDGenButton8"
                    icon="sap-icon://log"
                    press="onLogoutPress"
                />
            </Toolbar>
        </headerContent>

        <content>
            <VBox
                id="createSessionContent"
                class="sapUiSmallMarginBegin sapUiSmallMarginTop"
            >
                <Label
                    id="_IDGenLabel1"
                    text="Select Event"
                />
                <Select
                    id="eventSelect"
                    items="{eventModel>/}"
                >
                    <core:Item
                        id="_IDGenItem1"
                        key="{eventModel>eventID}"
                        text="{eventModel>Name}"
                    />
                </Select>

                <Input
                    id="_IDGenInput1"
                    value="{sessionModel>/title}"
                    placeholder="Title"
                />
                <DatePicker
                    id="_IDGenDatePicker1"
                    value="{sessionModel>/startDate}"
                    placeholder="Start Date"
                />
                <DatePicker
                    id="_IDGenDatePicker2"
                    value="{sessionModel>/endDate}"
                    placeholder="End Date"
                />
                <TimePicker
                    id="_IDGenTimePicker1"
                    value="{sessionModel>/startTime}"
                    placeholder="Start Time"
                />
                <TimePicker
                    id="_IDGenTimePicker2"
                    value="{sessionModel>/endTime}"
                    placeholder="End Time"
                />
                <Input
                    id="_IDGenInput2"
                    value="{sessionModel>/room}"
                    placeholder="Room"
                />
                <Input
                    id="_IDGenInput3"
                    value="{sessionModel>/description}"
                    placeholder="Description"
                />
                <Input
                    id="_IDGenInput4"
                    value="{sessionModel>/speaker}"
                    placeholder="Speaker"
                />
                <Input
                    id="_IDGenInput5"
                    value="{sessionModel>/totalSeats}"
                    placeholder="Total Seats"
                />

                <Button
                    id="_IDGenButton9"
                    text="Create Session"
                    press="onCreateSession"
                />

                <Text
                    id="messageText"
                    visible="false"
                />
            </VBox>
        </content>
    </Page>
    <Popover
        id="popover"
        placement="Auto"
        showArrow="true"
        title="{i18n>Menu}"
        contentWidth="auto"
    >
        <content>
            <VBox
                id="_IDGenVBox"
                width="100%"
            >
                <Button
                    id="_IDGenButton"
                    text="{i18n>EN}"
                    press="onSwitchToEnglish"
                    width="100%"
                />
                <Button
                    id="_IDGenButton10"
                    text="{i18n>NL}"
                    press="onSwitchToDutch"
                    width="100%"
                />
            </VBox>
        </content>
    </Popover>
</mvc:View>
