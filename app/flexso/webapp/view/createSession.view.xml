<mvc:View
    controllerName="flexso.controller.CreateSession"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    class="backgroundFlexso"
>
    <Page
        id="_IDGenPage1"
        title="Flexso"
        class="createPages"
        enableScrolling="true"
    >
        <headerContent>
            <core:Fragment
                fragmentName="flexso.fragment.Toolbar"
                type="XML"
            />
        </headerContent>
        <content>
            <VBox
                id="createSessionConten"
                class="createSessionBox"
                width="100%"
            >
                <l:VerticalLayout
                    id="_IDGenVerticalLayout1"
                    class="createSessionLayout"
                    width="75%"
                >
                    <Title
                        id="_IDGenTitle1"
                        text="{i18n>titleCreateSession}"
                        level="H2"
                        class="TitleCreateSession"
                    />
                    <Image
                        id="imageFlexso"
                        src="{imageModel>/path}"
                        class="registerImage"
                    />
                    <Label
                        id="_IDGenLabel11"
                        text="{i18n>SelectEvent}"
                        class="LabelCreateSession"
                    />
                    <SearchField
                        width="50%" 
                        id="searchEvent" 
                        liveChange="onSearchLiveChange" 
                        class="InputCreateSession"
                        suggest="onSuggestEvent"
                        placeholder="{i18n>phSearch1}"
                    ></SearchField>

                
                <Table id="_IDGenTable1" width="50%" itemPress="onItemPress" class="InputCreateSession" items="{eventModel>/}" growing="true" growingThreshold="3" selectionChange="onSelectionChange">
    <columns>
        <Column id="_IDGenColumn1" width="45%">
            <Text id="_IDGenText1" text="{i18n>eventName}" />
        </Column>
    </columns>
    <items>
        <ColumnListItem id="_IDGenColumnListItem1" vAlign="Middle" type="Navigation" press="onSessionSelect">
            <cells>
                <Text id="_IDGenText7" text="{eventModel>Name}" />
            </cells>
        </ColumnListItem>
    </items>
</Table>


                    <Label
                        id="_IDGenLabel1"
                        text="{i18n>thisIsTheEvent}"
                        class="LabelCreateSession"
                        
                    />

                    <Button id="button1" icon="sap-icon://edit" press="onEditPress"></Button>
                    <Input
                        id="eventComboBox"
                        width="50%"
                        class="InputCreateSession"
                        required="true"
                        placeholder="{i18n>thisIsTheEvent}"
                        editable="false"
                        
                    >
            
                    </Input>

                    <Label
                        id="_IDGenLabel2"
                        text="{i18n>Title}"
                        class="LabelCreateSessionPage"
                    />
                    <Input
                        id="_IDGenInput1"
                        value="{sessionModel>/title}"
                        placeholder="{i18n>Title}"
                        width="50%"
                        class="InputCreateSession"
                        required="true"
                    />

                    <Label
                        id="_IDGenLabel3"
                        text="{i18n>StartDate}"
                        class="LabelCreateSessionPage"
                    />
                    <DatePicker
                        id="_IDGenDatePicker1"
                        value="{sessionModel>/startDate}"
                        placeholder="{i18n>StartDate}"
                        width="50%"
                        class="InputCreateSession"
                        required="true"
                    />

                    <Label
                        id="_IDGenLabel4"
                        text="{i18n>EndDate}"
                        class="LabelCreateSessionPage"
                    />
                    <DatePicker
                        id="_IDGenDatePicker2"
                        value="{sessionModel>/endDate}"
                        placeholder="{i18n>EndDate}"
                        width="50%"
                        class="InputCreateSession"
                        required="true"
                    />

                    <Label
                        id="_IDGenLabel5"
                        text="{i18n>StartTime}"
                        class="LabelCreateSessionPage"
                    />
                    <TimePicker
                        id="_IDGenTimePicker1"
                        value="{sessionModel>/startTime}"
                        placeholder="{i18n>StartTime}"
                        width="50%"
                        class="InputCreateSession"
                        required="true"
                    />

                    <Label
                        id="_IDGenLabel6"
                        text="{i18n>EndTime}"
                        class="LabelCreateSessionPage"
                    />
                    <TimePicker
                        id="_IDGenTimePicker2"
                        value="{sessionModel>/endTime}"
                        placeholder="{i18n>EndTime}"
                        width="50%"
                        class="InputCreateSession"
                        required="true"
                    />

                    <Label
                        id="_IDGenLabel7"
                        text="{i18n>Room}"
                        class="LabelCreateSessionPage"
                    />
                    <Input
                        id="_IDGenInput2"
                        value="{sessionModel>/room}"
                        placeholder="{i18n>Room}"
                        width="50%"
                        class="InputCreateSession"
                        required="true"
                    />

                    <Label
                        id="_IDGenLabel8"
                        text="{i18n>Speaker}"
                        class="LabelCreateSessionPage"
                    />
                    <Input
                        id="_IDGenInput4"
                        value="{sessionModel>/speaker}"
                        placeholder="{i18n>Speaker}"
                        width="50%"
                        class="InputCreateSession"
                        required="true"
                    />

                    <Label
                        id="_IDGenLabel9"
                        text="{i18n>TotalSeats}"
                        class="LabelCreateSessionPage"
                    />
                    <Input
                        id="_IDGenInput5"
                        value="{sessionModel>/totalSeats}"
                        placeholder="{i18n>TotalSeats}"
                        width="50%"
                        type="Number"
                        class="InputCreateSession"
                        change="onTotalSeatsChange"
                        required="true"
                    />

                    <Label
                        id="_IDGenLabel10"
                        text="{i18n>Description}"
                        class="LabelCreateSessionPage"
                    />
                    <TextArea
                        id="_IDGenInput3"
                        value="{sessionModel>/description}"
                        placeholder="{i18n>Description}"
                        width="50%"
                        rows="5"
                        class="InputCreateSession"
                        required="true"
                    />

                    <Button
                        id="_IDGenButton"
                        text="{i18n>CreateSession}"
                        class="sapUiSmallMarginTop createEventButtons"
                        press="onCreateSession"
                        width="30%"
                    />
                    <Button
                        id="_IDGenButton2"
                        text="{i18n>backToHomeButton}"
                        class="sapUiSmallMarginTop createEventButtons"
                        press="onBackToHome"
                        width="30%"
                    />

                    <Text
                        id="messageText"
                        visible="false"
                    />
                </l:VerticalLayout>
            </VBox>
        </content>
    </Page>
    <!-- Popover Definition -->
    <core:Fragment
        fragmentName="flexso.fragment.Popover"
        type="XML"
    />
</mvc:View>