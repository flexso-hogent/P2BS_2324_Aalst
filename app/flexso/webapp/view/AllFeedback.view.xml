<mvc:View
    controllerName="flexso.controller.AllFeedback"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:tnt="sap.tnt"
    xmlns:core="sap.ui.core"
    displayBlock="true"
>
    <Page
        id="_IDGenPage1"
        title="{i18n>titleFeedbackPage}"
        enableScrolling="true"
        class="backgroundEventCreate"
    >
        <headerContent>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button
                    id="languageButton"
                    icon="sap-icon://globe"
                    press="onDropdownPress"
                />
                <Button
                    id="_IDGenButton3"
                    icon="sap-icon://home"
                    press="onBackToHome"
                />
                <Button
                    id="_IDGenButton4"
                    icon="sap-icon://person-placeholder"
                    press="onProfileButtonClick"
                />
                <Button
                    id="_IDGenButton5"
                    icon="sap-icon://log"
                    press="onLogoutPress"
                />
            </Toolbar>
        </headerContent>

        <content>
            <VBox
                id="_IDGenVBox4"
                class="sapUiSmallMarginBegin feedbackItemContainer"
            >
                <HBox
                    id="_IDGenHBox1"
                    class=""
                >
                    <SearchField
                        id="_IDGenSearchField"
                        placeholder="{i18n>SearchFeedback}"
                        liveChange="onSearch"
                        width="100%"
                    />
                    <Button
                        id="_IDGenButton11"
                        icon="sap-icon://sort"
                        press="onSortPress"
                    />
                </HBox>
                <Table
                    id="_IDGenTable1"
                    items="{feedbackModel>/}"
                    noDataText="{i18n>noDataText}"
                    class="Nodata"
                >
                    <columns>
                        <Column id="_IDGenColumn1">
                            <Label
                                id="_IDGenLabel1"
                                text="{i18n>SessionTitle}"
                            />
                        </Column>
                        <Column id="_IDGenColumn2">
                            <Label
                                id="_IDGenLabel2"
                                text="{i18n>Rating}"
                            />
                        </Column>
                        <Column id="_IDGenColumn3">
                            <Label
                                id="_IDGenLabel3"
                                text="{i18n>Review}"
                            />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem id="_IDGenColumnListItem1">
                            <cells>
                                <Text
                                    id="_IDGenText1"
                                    text="{feedbackModel>SessionTitle}"
                                />
                                <Text
                                    id="_IDGenText2"
                                    text="{= 'â­'.repeat(${feedbackModel>Rating}) }"
                                />
                                <Text
                                    id="_IDGenText3"
                                    text="{feedbackModel>Review}"
                                />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
    </Page>

    <!-- Popover Definition -->
    <Popover
        id="popover"
        placement="Auto"
        showArrow="true"
        title="{i18n>Menu}"
        contentWidth="auto"
    >
        <content>
            <VBox id="_IDGenVBox3">
                <Button
                    id="_IDGenButton9"
                    text="{i18n>EN}"
                    press="onSwitchToEnglish"
                    width="100%"
                />
                <Button
                    id="_IDGenButton10"
                    text="{i18n>NL}"
                    press="onSwitchToDutch"
                    width="100%"
                />
            </VBox>
        </content>
    </Popover>
</mvc:View>
