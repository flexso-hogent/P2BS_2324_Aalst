<mvc:View
    controllerName="flexso.controller.AllFeedback"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:tnt="sap.tnt"
    xmlns:core="sap.ui.core"
    displayBlock="true"
>
    <Page
        id="_IDGenPage1"
        title="{i18n>titleFeedbackPage}"
        enableScrolling="true"
        class="backgroundEventCreate"
    >
        <headerContent>
            <core:Fragment
                fragmentName="flexso.fragment.Toolbar"
                type="XML"
            />
        </headerContent>

        <content>
            <VBox
                id="_IDGenVBox4"
                class="sapUiSmallMarginBegin feedbackItemContainer"
            >
                <HBox
                    id="_IDGenHBox1"
                    class="barAll"
                >
                    <SearchField
                        id="_IDGenSearchField"
                        placeholder="{i18n>SearchFeedback}"
                        liveChange="onSearch"
                        width="100%"
                    />
                    <Button
                        id="_IDGenButton11"
                        icon="sap-icon://sort"
                        press="onSortPress"
                    />
                </HBox>
                <Table
                    id="_IDGenTable1"
                    items="{feedbackModel>/}"
                    noDataText="{i18n>noDataText}"
                    class="Nodata"
                >
                    <columns>
                        <Column id="_IDGenColumn1">
                            <Label
                                id="_IDGenLabel1"
                                text="{i18n>SessionTitle}"
                            />
                        </Column>
                        <Column id="_IDGenColumn2">
                            <Label
                                id="_IDGenLabel2"
                                text="{i18n>Rating}"
                            />
                        </Column>
                        <Column id="_IDGenColumn3">
                            <Label
                                id="_IDGenLabel3"
                                text="{i18n>Review}"
                            />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem id="_IDGenColumnListItem1">
                            <cells>
                                <Text
                                    id="_IDGenText1"
                                    text="{feedbackModel>SessionTitle}"
                                />
                                <Text
                                    id="_IDGenText2"
                                    text="{= '⭐'.repeat(${feedbackModel>Rating}) }"
                                />
                                <Text
                                    id="_IDGenText3"
                                    text="{feedbackModel>Review}"
                                />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
    </Page>

    <!-- Popover Definition -->
    <core:Fragment
        fragmentName="flexso.fragment.Popover"
        type="XML"
    />
</mvc:View>
