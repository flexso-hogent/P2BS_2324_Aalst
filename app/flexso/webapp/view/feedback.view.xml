<mvc:View
    controllerName="flexso.controller.feedback"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    displayBlock="true"
>
    <Page
        id="feedbackPage"
        title="Flexso"
        class="feedbackPage backgroundEventCreate"
    >
        <headerContent>
            <core:Fragment
                fragmentName="flexso.fragment.Toolbar"
                type="XML"
            />
        </headerContent>
        <l:VerticalLayout
            id="_LayoutFeedback"
            width="100%"
            class="feedbackLayout"
        >
            <l:content>
                <VBox
                    id="_IDGenVBox1"
                    class="feedbackBox"
                    width="1000px"
                >
                    <Title
                        id="_IDGenTitle1"
                        text="{i18n>titleFeedbackPage}"
                        level="H2"
                        class="TitleCreateSession"
                    />
                    <Image
                        id="imageFlexso"
                        src="{imageModel>/path}"
                        class="registerImage"
                    />
                    <!--Sessie zoeken-->
                    <Label
                        id="sessieZoekenLabel"
                        text="{i18n>sessieZoekenLabel}"
                        class="feedbackLabel"
                    />

                    <!--Sessie input-->
                    <OverflowToolbar
                        id="_IDGenOverflowToolbar1"
                        width="100%"
                        class="sapUiRespOverflowToolbar"
                    >
                        <SearchField
                            id="sessieZoekenInput"
                            liveChange="onSearch"
                            width="100%"
                        />
                    </OverflowToolbar>

                    <!--Tabel-->
                    <Table
                        id="sessionTable"
                        inset="false"
                        items="{allSessions>/}"
                        width="100%"
                        class="sapUiRespTable"
                    >
                        <columns>
                            <Column
                                id="clmSessionTitel"
                                width="45%"
                            >
                                <Text
                                    id="lblSessionTitel"
                                    text="{i18n>SessionNameTable}"
                                />
                            </Column>
                            <Column
                                id="clmSessionStartDate"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                            >
                                <Text
                                    id="lblSessionStartDate"
                                    text="{i18n>SessionStartTable}"
                                />
                            </Column>
                            <Column
                                id="clmSessionEndDate"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                            >
                                <Text
                                    id="lblSessionEndDate"
                                    text="{i18n>SessionEndTable}"
                                />
                            </Column>
                            <Column
                                id="clmSessionStartTime"
                                minScreenWidth="Desktop"
                                demandPopin="true"
                                hAlign="End"
                            >
                                <Text
                                    id="lblSessionStartTime"
                                    text="{i18n>StartTimeTable}"
                                />
                            </Column>
                            <Column
                                id="clmSessionEndTime"
                                minScreenWidth="Desktop"
                                demandPopin="true"
                                hAlign="End"
                            >
                                <Text
                                    id="lblSessionEndTime"
                                    text="{i18n>EndTimeTable}"
                                />
                            </Column>
                            <Column
                                id="clmSessionSpeaker"
                                minScreenWidth="Desktop"
                                demandPopin="true"
                                hAlign="End"
                            >
                                <Text
                                    id="lblSessionSpeaker"
                                    text="{i18n>SessionSpeakerTable}"
                                />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem
                                id="_IDGenColumnListItem1"
                                vAlign="Middle"
                                type="Navigation"
                                press="onSessionSelect"
                            >
                                <cells>
                                    <Text
                                        id="txtSessionTitel"
                                        text="{allSessions>title}"
                                    />
                                    <Text
                                        id="txtSessionStartDate"
                                        text="{allSessions>startDate}"
                                    />
                                    <Text
                                        id="txtSessionEndDate"
                                        text="{allSessions>endDate}"
                                    />
                                    <Text
                                        id="txtSessionStartTime"
                                        text="{allSessions>startTime}"
                                    />
                                    <Text
                                        id="txtSessionEndTime"
                                        text="{allSessions>endTime}"
                                    />
                                    <Text
                                        id="txtSessionSpeaker"
                                        text="{allSessions>naam}"
                                    />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>

                    <!--Feedback-->
                    <Label
                        id="feedbackLabel"
                        text="{i18n>feedbackLabel}"
                        class="feedbackLabel"
                    />

                    <RatingIndicator
                        id="feedbackRating"
                        maxValue="5"
                        tooltip="Feedback"
                    />

                    <!--Review-->
                    <Label
                        id="reviewLabel"
                        text="{i18n>reviewLabel}"
                        class="feedbackLabel"
                    />

                    <TextArea
                        id="reviewTextArea"
                        rows="4"
                        width="100%"
                        placeholder="{i18n>feedbackPlaceholder}"
                    />

                    <!--Register Button-->
                    <Button
                        id="sendFeedback"
                        text="{i18n>sendFeedback}"
                        width="50%"
                        press="onFeedback"
                        class="sapUiSmallMarginTop updateProfileButton"
                        enabled="{= ${sessieZoekenInput>/value} !== ''}"
                    />
                    <Button
                        id="sendFeedback2"
                        text="{i18n>backToHomeButton}"
                        width="50%"
                        press="onBackToHome"
                        class="sapUiSmallMarginTop updateProfileButton"
                    />
                </VBox>
            </l:content>
        </l:VerticalLayout>
    </Page>
    <!-- Popover Definition -->
    <core:Fragment
        fragmentName="flexso.fragment.Popover"
        type="XML"
    />
</mvc:View>
