<mvc:View
    controllerName="flexso.controller.feedback"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    displayBlock="true"
>   
    <Page
        id="feedbackPage"
        title="Feedback"
        class="feedbackPage"
    >
        <headerContent>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button
                    id="_IDGenButton3"
                    text="{i18n>EN}"
                    press="onSwitchToEnglish"
                />
                <Button
                    id="_IDGenButton4"
                    text="{i18n>NL}"
                    press="onSwitchToDutch"
                />
                <Button
                    id="_IDGenBackHomeButton"
                    text="{i18n>backToHomeButton}"
                    press="onBackToHome"
                />
            </Toolbar>
        </headerContent>
        <content>
            <VBox
                id="_IDGenVBox1"
                class="registerBox"
            >
                <l:VerticalLayout
                    id="_IDGenVerticalLayout1"
                    class="loginLayout"
                >
                    <Image
                        id="imageFlexso"
                        src="{imageModel>/path}"
                        width="20%"
                        height="20%"
                        class="loginImage"
                    />

                    <!--Title-->
                    <Title
                        id="_IDGenTitle1"
                        text="{i18n>titleFeedbackPage}"
                        level="H2"
                        class="feedbackTitle"
                    />
                    <!--Sessie zoeken-->
                    <Label
                        id="sessieZoekenLabel"
                        text="{i18n>sessieZoekenLabel}"
                        class="feedbackLabel"
                    />

                    <!--Sessie input-->
                    <OverflowToolbar id="_IDGenOverflowToolbar1">
                        <SearchField id="sessieZoekenInput" liveChange="onSearch" width="100%" />
                    </OverflowToolbar>

                    <!--Tabel-->
                    <Table id="sessionTable"
                        inset="false"
                        items="{/Sessions}"
                        width="100%">

                        <columns >
                            <Column id="clmSessionTitel" width="60%">
                                <Text id="lblSessionTitel" text="Session" />
                            </Column>
                            <Column id="clmSessionDate" minScreenWidth="Tablet" demandPopin="true">
                                <Text id="lblSessionDate" text="Session Date" />
                            </Column>
                            <Column id="clmSessionTime" minScreenWidth="Desktop" demandPopin="true" hAlign="End">
                                <Text id="lblSessionTime" text="Time" />
                            </Column>
                            <Column id="clmSessionSpeaker" minScreenWidth="Desktop" demandPopin="true" hAlign="End">
                                <Text id="lblSessionSpeaker" text="Speaker" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem id="_IDGenColumnListItem1"
                            vAlign="Middle"
                            type="Navigation"
                            press="onSessionSelect">
                                <cells>
                                    <Text id="txtSessionTitel"
                                    text="{title}" />
                                    <Text id="txtSessionDate"
                                    text="{date}" />
                                    <Text id="txtSessionTime"
                                    text="{time}" />
                                    <Text id="txtSessionSpeaker"
                                    text="{speaker}" />

                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>

                    <!--Feedback-->
                    <Label
                        id="feedbackLabel"
                        text="{i18n>feedbackLabel}"
                        class="feedbackLabel"
                    />

                    <RatingIndicator
                        id="feedbackRating"
                        maxValue="5"
                        tooltip="Feedback"
                    />

                    <!--Review-->
                    <Label
                        id="reviewLabel"
                        text="{i18n>reviewLabel}"
                        class="feedbackLabel"
                    />

                    <TextArea
                        id="reviewTextArea"
                        rows="4"
                        width="100%"
                        placeholder="{i18n>feedbackPlaceholder}"
                    />

                    <!--Register Button-->
                    <Button
                        id="sendFeedback"
                        text="{i18n>sendFeedback}"
                        width="35%"
                        press="onFeedback"
                        class="feedbackButton"
                    />
                </l:VerticalLayout>
            </VBox>
        </content>
    </Page>
</mvc:View>