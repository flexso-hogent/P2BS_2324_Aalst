<mvc:View
    controllerName="flexso.controller.feedback"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
>
    <Page
        id="feedbackPage"
        title="Feedback"
        class="feedbackPage"
    >
        <headerContent>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button
                    id="_IDGenButton3"
                    text="{i18n>EN}"
                    press="onSwitchToEnglish"
                />
                <Button
                    id="_IDGenButton4"
                    text="{i18n>NL}"
                    press="onSwitchToDutch"
                />
                <Button
                    id="_IDGenBackHomeButton"
                    text="{i18n>backToHomeButton}"
                    press="onBackToHome"
                />
            </Toolbar>
        </headerContent>
        <content>
            <VBox
                id="_IDGenVBox1"
                class="registerBox"
            >
                <l:VerticalLayout
                    id="_IDGenVerticalLayout1"
                    class="loginLayout"
                >
                    <Image
                        id="imageFlexso"
                        src="{imageModel>/path}"
                        width="100%"
                        height="100%"
                        class="loginImage"
                    />

                    <!--Title-->
                    <Title
                        id="_IDGenTitle1"
                        text="{i18n>titleFeedbackPage}"
                        level="H2"
                        class="feedbackTitle"
                    />
                    <!--Sessie zoeken-->
                    <Label
                        id="sessieZoekenLabel"
                        text="{i18n>sessieZoekenLabel}"
                        class="feedbackLabel"
                    />

                    <!--Sessie input-->
                    <Input
                        id="sessieZoekenInput"
                        type="Text"
                        placeholder="{i18n>sessieZoekenPlaceholder}"
                        class="feedbackInput"
                        required="true"
                    />

                    <!--Feedback-->
                    <Label
                        id="feedbackLabel"
                        text="{i18n>feedbackLabel}"
                        class="feedbackLabel"
                    />

                    <RatingIndicator
                        id="feedbackRating"
                        maxValue="5"
                        tooltip="Feedback"
                    />

                    <!--Review-->
                    <Label
                        id="reviewLabel"
                        text="{i18n>reviewLabel}"
                        class="feedbackLabel"
                    />

                    <TextArea
                        id="reviewTextArea"
                        rows="4"
                        width="100%"
                        placeholder="{i18n>feedbackPlaceholder}"
                    />

                    <!--Register Button-->
                    <Button
                        id="sendFeedback"
                        text="{i18n>sendFeedback}"
                        width="100%"
                        press="onFeedback"
                        class="feedbackButton"
                    />
                </l:VerticalLayout>
            </VBox>
        </content>
    </Page>
</mvc:View>
