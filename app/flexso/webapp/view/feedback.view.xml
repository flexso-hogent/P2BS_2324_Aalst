<mvc:View
    controllerName="flexso.controller.feedback"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    displayBlock="true"
>
    <Page
        id="feedbackPage"
        title="Feedback"
        class="feedbackPage"
    >
        <headerContent>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button
                    id="languageButton"
                    icon="sap-icon://globe"
                    press="onDropdownPress"
                />
                <Button
                    id="_IDGenButton3"
                    icon="sap-icon://home"
                    press="onBackToHome"
                />
             <Button
                    id="_IDGenButton4"
                    icon="sap-icon://person-placeholder"
                    press="onProfileButtonClick"
                />
                <Button
                    id="_IDGenButton8"
                    icon="sap-icon://log"
                    press="onLogoutPress"
                />
            </Toolbar>
        </headerContent>
        <content>
            <VBox
                id="_IDGenVBox1"
                class="registerBox"
                width="100%"
            >
                <l:VerticalLayout
                    id="_IDGenVerticalLayout1"
                    class="loginLayout"
                >
                    <Image
                        id="imageFlexso"
                        src="{imageModel>/path}"
                        width="200px"
                        height="200px"
                        class="loginImage"
                    />

                    <!--Title-->
                    <Title
                        id="_IDGenTitle1"
                        text="{i18n>titleFeedbackPage}"
                        level="H2"
                        class="feedbackTitle"
                    />
                    <!--Sessie zoeken-->
                    <Label
                        id="sessieZoekenLabel"
                        text="{i18n>sessieZoekenLabel}"
                        class="feedbackLabel"
                    />

                    <!--Sessie input-->
                    <OverflowToolbar id="_IDGenOverflowToolbar1">
                        <SearchField
                            id="sessieZoekenInput"
                            liveChange="onSearch"
                            width="1853px"
                        />
                    </OverflowToolbar>

                    <!--Tabel-->
                    <Table
                        id="sessionTable"
                        inset="false"
                        items="{/Sessions}"
                        width="100%"
                    >
                        <columns>
                            <Column
                                id="clmSessionTitel"
                                width="60%"
                            >
                                <Text
                                    id="lblSessionTitel"
                                    text="{i18n>SessionNameTable}"
                                />
                            </Column>
                            <Column
                                id="clmSessionStartDate"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                            >
                                <Text
                                    id="lblSessionStartDate"
                                    text="{i18n>SessionStartTable}"
                                />
                            </Column>
                            <Column
                                id="clmSessionEndDate"
                                minScreenWidth="Tablet"
                                demandPopin="true"
                            >
                                <Text
                                    id="lblSessionEndDate"
                                    text="{i18n>SessionEndTable}"
                                />
                            </Column>
                            <Column
                                id="clmSessionStartTime"
                                minScreenWidth="Desktop"
                                demandPopin="true"
                                hAlign="End"
                            >
                                <Text
                                    id="lblSessionStartTime"
                                    text="{i18n>StartTimeTable}"
                                />
                            </Column>
                            <Column
                                id="clmSessionEndTime"
                                minScreenWidth="Desktop"
                                demandPopin="true"
                                hAlign="End"
                            >
                                <Text
                                    id="lblSessionEndTime"
                                    text="{i18n>EndTimeTable}"
                                />
                            </Column>
                            <Column
                                id="clmSessionSpeaker"
                                minScreenWidth="Desktop"
                                demandPopin="true"
                                hAlign="End"
                            >
                                <Text
                                    id="lblSessionSpeaker"
                                    text="{i18n>SessionSpeakerTable}"
                                />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem
                                id="_IDGenColumnListItem1"
                                vAlign="Middle"
                                type="Navigation"
                                press="onSessionSelect"
                            >
                                <cells>
                                    <Text
                                        id="txtSessionTitel"
                                        text="{title}"
                                    />
                                    <Text
                                        id="txtSessionStartDate"
                                        text="{startDate}"
                                    />
                                    <Text
                                        id="txtSessionEndDate"
                                        text="{endDate}"
                                    />
                                    <Text
                                        id="txtSessionStartTime"
                                        text="{startTime}"
                                    />
                                    <Text
                                        id="txtSessionEndTime"
                                        text="{endTime}"
                                    />
                                    <Text
                                        id="txtSessionSpeaker"
                                        text="{speaker}"
                                    />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>

                    <!--Feedback-->
                    <Label
                        id="feedbackLabel"
                        text="{i18n>feedbackLabel}"
                        class="feedbackLabel"
                    />

                    <RatingIndicator
                        id="feedbackRating"
                        maxValue="5"
                        tooltip="Feedback"
                    />

                    <!--Review-->
                    <Label
                        id="reviewLabel"
                        text="{i18n>reviewLabel}"
                        class="feedbackLabel"
                    />

                    <TextArea
                        id="reviewTextArea"
                        rows="4"
                        width="100%"
                        placeholder="{i18n>feedbackPlaceholder}"
                    />

                    <!--Register Button-->
                    <Button
                        id="sendFeedback"
                        text="{i18n>sendFeedback}"
                        width="35%"
                        press="onFeedback"
                        class="feedbackButton"
                    />
                </l:VerticalLayout>
            </VBox>
        </content>
    </Page>
    <Popover
        id="popover"
        placement="Auto"
        showArrow="true"
        title="{i18n>Menu}"
        contentWidth="auto"
    >
        <content>
            <VBox id="_IDGenVBox3">
                <Button
                    id="_IDGenButton9"
                    text="{i18n>EN}"
                    press="onSwitchToEnglish"
                    width="100%"
                />
                <Button
                    id="_IDGenButton10"
                    text="{i18n>NL}"
                    press="onSwitchToDutch"
                    width="100%"
                />
            </VBox>
        </content>
    </Popover>
</mvc:View>
